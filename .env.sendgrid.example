# SendGrid Configuration
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git!

# SendGrid API Key (from SendGrid Dashboard → Settings → API Keys)
SENDGRID_API_KEY=SG.your-api-key-here

# From Email Address (must be verified domain)
SENDGRID_FROM_EMAIL=noreply@www.ailydian.com

# From Name (displayed in recipient's inbox)
SENDGRID_FROM_NAME=AILYDIAN

# Optional: SendGrid Template IDs
SENDGRID_TEMPLATE_WELCOME=d-xxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxx
SENDGRID_TEMPLATE_NOTIFICATION=d-xxxxx

# Optional: SendGrid Settings
SENDGRID_SANDBOX_MODE=false
SENDGRID_ENABLE_TRACKING=true
SENDGRID_ENABLE_CLICK_TRACKING=true
SENDGRID_ENABLE_OPEN_TRACKING=true
