# LCI Database Configuration
# WARNING: Change all passwords in production!

# PostgreSQL
DATABASE_URL="postgresql://lci_user:lci_dev_password_change_in_prod@localhost:5433/lci_db?schema=public"
POSTGRES_USER=lci_user
POSTGRES_PASSWORD=lci_dev_password_change_in_prod
POSTGRES_DB=lci_db

# Redis
REDIS_URL="redis://:lci_redis_dev_password@localhost:6380"
REDIS_PASSWORD=lci_redis_dev_password

# Meilisearch
MEILI_HOST="http://localhost:7700"
MEILI_MASTER_KEY="lci_meili_dev_master_key_change_in_prod"

# Application
NODE_ENV=development
PORT=3201

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET="lci_jwt_secret_change_in_production_min_32_chars"
JWT_REFRESH_SECRET="lci_jwt_refresh_secret_change_in_production_min_32_chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# S3/R2 Storage (for evidence uploads)
S3_ENDPOINT="https://your-account.r2.cloudflarestorage.com"
S3_ACCESS_KEY_ID="your_access_key"
S3_SECRET_ACCESS_KEY="your_secret_key"
S3_BUCKET="lci-evidence"
S3_REGION="auto"

# Email (for notifications)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASSWORD="your_sendgrid_api_key"
SMTP_FROM="noreply@lydian.com"

# Observability
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN="http://localhost:3200,http://localhost:3000"

# White-hat Security Headers
HELMET_ENABLED=true
CSRF_ENABLED=true

# KVKK/GDPR
LEGAL_REQUEST_DEADLINE_DAYS=30
DATA_RETENTION_DAYS=365
