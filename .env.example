# ========================================
# COMPLIANCE & SECURITY
# ========================================

# Data Retention (KVKK/GDPR)
DATA_RETENTION_DAYS=7
ENABLE_AUTO_ANONYMIZATION=true
ANONYMIZATION_CRON=0 2 * * *

# Rate Limiting
DEFAULT_RATE_LIMIT_RPS=8
DEFAULT_RATE_LIMIT_BURST=16

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# Idempotency
IDEMPOTENCY_TTL_SECONDS=86400

# ========================================
# FEATURE FLAGS
# ========================================

ENABLE_WEBHOOKS=true
ENABLE_CAMPAIGNS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_AI_REASONER=false
ENABLE_CONSENT_API=true

# ========================================
# REGIONAL SETTINGS
# ========================================

# Russia (Data Residency)
RU_DATA_RESIDENCY_ENABLED=true
RU_DATA_STORAGE_REGION=ru-central1

# Saudi Arabia / Qatar (PDPL)
PDPL_COMPLIANCE_MODE=strict

# EU (GDPR)
GDPR_MODE=enabled
GDPR_DPO_EMAIL=dpo@ailydian.com

