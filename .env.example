# ========================================
# LYDIAN APPLICATION SDK - ENVIRONMENT VARIABLES
# White-Hat: NO production secrets in repo
# Copy to .env.local and fill with actual values
# ========================================

# ========== General ==========
APP_ENV=development
NODE_ENV=development
LOG_LEVEL=info

# ========== Database ==========
DB_URL=postgresql://lydian:lydian_dev_password@localhost:5432/lydian
DB_POOL_MIN=2
DB_POOL_MAX=10

# ========== Redis Cache ==========
REDIS_URL=redis://:lydian_dev_redis@localhost:6379
REDIS_TTL_DEFAULT=3600
REDIS_KEY_PREFIX=lydian:

# ========== Vault (Secrets Management) ==========
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=lydian-dev-root-token
VAULT_NAMESPACE=lydian
VAULT_ROLE_ID=
VAULT_SECRET_ID=

# ========== Kafka (Event Streaming) ==========
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=lydian-gateway
KAFKA_GROUP_ID=lydian-consumers

# ========== Temporal (Workflow Engine) ==========
TEMPORAL_ADDR=localhost:7233
TEMPORAL_NAMESPACE=default

# ========== Observability ==========
PROM_METRICS_PORT=9091
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=lydian-gateway

# ========== Azure OpenAI (Lydian-IQ Reasoner) ==========
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ========== Perplexity AI (Web Search) ==========
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ========== ZenMux AI (Ling-1T Model) ==========
ZENMUX_API_KEY=your-zenmux-api-key-here

# ========== Gateway API ==========
GATEWAY_PORT=3100
GATEWAY_HOST=0.0.0.0
GATEWAY_API_URL=http://localhost:3100

# ========== Services ==========
ORCHESTRATOR_PORT=3200
