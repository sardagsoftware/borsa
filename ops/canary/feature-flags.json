{
  "version": "1.0.0",
  "lastUpdated": "2025-10-07T00:00:00Z",
  "environment": "production",
  "flags": {
    "i18n_system_enabled": {
      "enabled": true,
      "description": "Master switch for i18n system",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "i18n-team"
    },
    "i18n_auto_detection": {
      "enabled": true,
      "description": "Automatic locale detection from browser/cookie",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "i18n-team"
    },
    "i18n_locale_switcher": {
      "enabled": true,
      "description": "Language switcher dropdown UI",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "i18n-team"
    },
    "i18n_rtl_support": {
      "enabled": true,
      "description": "RTL (Right-to-Left) support for Arabic",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "arabic-users",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "i18n-team"
    },
    "i18n_hreflang_tags": {
      "enabled": true,
      "description": "SEO hreflang meta tags injection",
      "rolloutPercentage": 100,
      "rolloutStrategy": "immediate",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "seo-team"
    },
    "i18n_translation_cache": {
      "enabled": true,
      "description": "Client-side translation caching",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "performance-team"
    },
    "i18n_lazy_loading": {
      "enabled": true,
      "description": "Lazy load translation categories on demand",
      "rolloutPercentage": 100,
      "rolloutStrategy": "gradual",
      "targetAudience": "all",
      "createdAt": "2025-10-07T00:00:00Z",
      "updatedAt": "2025-10-07T00:00:00Z",
      "owner": "performance-team"
    }
  },
  "rolloutSchedule": {
    "phase1": {
      "percentage": 1,
      "duration": "24h",
      "description": "Initial canary - 1% of users",
      "successCriteria": {
        "errorRate": "<0.1%",
        "loadTime": "<200ms",
        "userComplaints": 0
      }
    },
    "phase2": {
      "percentage": 5,
      "duration": "48h",
      "description": "Expanded canary - 5% of users",
      "successCriteria": {
        "errorRate": "<0.1%",
        "loadTime": "<200ms",
        "userComplaints": "<5"
      }
    },
    "phase3": {
      "percentage": 25,
      "duration": "72h",
      "description": "Quarter rollout - 25% of users",
      "successCriteria": {
        "errorRate": "<0.1%",
        "loadTime": "<250ms",
        "userComplaints": "<10"
      }
    },
    "phase4": {
      "percentage": 50,
      "duration": "72h",
      "description": "Half rollout - 50% of users",
      "successCriteria": {
        "errorRate": "<0.1%",
        "loadTime": "<250ms",
        "userComplaints": "<20"
      }
    },
    "phase5": {
      "percentage": 100,
      "duration": "permanent",
      "description": "Full rollout - 100% of users",
      "successCriteria": {
        "errorRate": "<0.1%",
        "loadTime": "<300ms",
        "userComplaints": "<50"
      }
    }
  },
  "rollbackTriggers": {
    "autoRollback": true,
    "triggers": [
      {
        "type": "error_rate",
        "threshold": 0.5,
        "windowMinutes": 5,
        "description": "Error rate exceeds 0.5% in 5-minute window"
      },
      {
        "type": "load_time",
        "threshold": 500,
        "windowMinutes": 5,
        "description": "Average load time exceeds 500ms"
      },
      {
        "type": "user_complaints",
        "threshold": 10,
        "windowMinutes": 60,
        "description": "More than 10 user complaints in 1 hour"
      },
      {
        "type": "crash_rate",
        "threshold": 0.1,
        "windowMinutes": 5,
        "description": "Browser crash rate exceeds 0.1%"
      }
    ]
  },
  "audienceSegments": {
    "all": {
      "description": "All users",
      "filter": null
    },
    "beta-testers": {
      "description": "Beta testing group",
      "filter": {
        "userIds": [],
        "emails": []
      }
    },
    "internal-staff": {
      "description": "Internal company staff",
      "filter": {
        "emailDomain": "ailydian.com"
      }
    },
    "arabic-users": {
      "description": "Users with Arabic locale preference",
      "filter": {
        "locale": "ar"
      }
    },
    "power-users": {
      "description": "High-engagement users",
      "filter": {
        "minSessionsPerMonth": 20
      }
    }
  },
  "monitoring": {
    "metrics": [
      "i18n.locale.detected",
      "i18n.locale.changed",
      "i18n.translation.loaded",
      "i18n.translation.failed",
      "i18n.translation.cache_hit",
      "i18n.translation.cache_miss",
      "i18n.hreflang.injected",
      "i18n.rtl.activated",
      "i18n.load_time",
      "i18n.error_rate"
    ],
    "alerts": [
      {
        "metric": "i18n.error_rate",
        "condition": ">0.5%",
        "severity": "critical",
        "channel": "slack"
      },
      {
        "metric": "i18n.load_time",
        "condition": ">500ms",
        "severity": "warning",
        "channel": "slack"
      },
      {
        "metric": "i18n.translation.failed",
        "condition": ">10/min",
        "severity": "warning",
        "channel": "email"
      }
    ]
  }
}
