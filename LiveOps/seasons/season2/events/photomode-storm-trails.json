  "description": {
    "en": "Capture the beauty of storm weather in the new biomes! Submit your best PhotoMode shots featuring storm effects for a chance to win exclusive rewards.",
    "tr": "Yeni biyomlardaki fırtına hava durumunun güzelliğini yakalayın! Fırtına efektlerini içeren en iyi PhotoMode çekimlerinizi gönderin ve özel ödüller kazanma şansı yakalayın.",
    "de": "Halte die Schönheit des Sturmwetters in den neuen Biomen fest! Reiche deine besten PhotoMode-Aufnahmen mit Sturmeffekten ein und gewinne exklusive Belohnungen.",
    "es": "¡Captura la belleza del clima tormentoso en los nuevos biomas! Envía tus mejores fotos en PhotoMode con efectos de tormenta para ganar recompensas exclusivas.",
    "fr": "Capturez la beauté du temps orageux dans les nouveaux biomes ! Soumettez vos meilleures photos PhotoMode avec des effets de tempête pour gagner des récompenses exclusives."
  },

  "theme": {
    "primary": "Storm Weather Photography",
    "biomes_required": [
      "canyon_night_storm",
      "ruins_sand_gale"
    ],
    "required_elements": [
      "visible_storm_effect",
      "character_in_frame",
      "biome_landmark"
    ],
    "optional_elements": [
      "lightning",
      "dramatic_lighting",
      "action_pose",
      "echo_visualization"
    ]
  },

  "submission_rules": {
    "max_submissions_per_user": 5,
    "min_resolution": {
      "width": 1920,
      "height": 1080
    },
    "max_file_size_mb": 10,
    "allowed_formats": [
      "jpg",
      "jpeg",
      "png"
    ],
    "required_metadata": [
      "biome_name",
      "timestamp",
      "user_id",
      "season_id"
    ],

    "prohibited_content": [
      "offensive_language",
      "inappropriate_imagery",
      "external_watermarks",
      "photoshopped_elements",
      "ui_visible",
      "debug_info_visible"
    ],

    "technical_requirements": {
      "photomode_enabled": true,
      "hud_hidden": true,
      "ui_hidden": true,
      "watermark_allowed": "official_only",
      "filters_allowed": true,
      "post_processing_allowed": false
    }
  },

  "moderation": {
    "review_sla_hours": 24,
    "require_human_review": true,
    "auto_approve_threshold": 0.95,
    "auto_reject_threshold": 0.20,

    "moderation_pipeline": [
      {
        "stage": "auto_filter",
        "method": "content_safety_api",
        "checks": [
          "nsfw_detection",
          "violence_detection",
          "text_extraction_profanity"
        ],
        "action_on_fail": "auto_reject"
      },
      {
        "stage": "technical_validation",
        "method": "image_analysis",
        "checks": [
          "resolution_check",
          "biome_detection",
          "storm_effect_detection",
          "ui_visibility_check"
        ],
        "action_on_fail": "flag_for_review"
      },
      {
        "stage": "human_review",
        "method": "manual",
        "checks": [
          "artistic_quality",
          "theme_adherence",
          "community_guidelines",
          "originality"
        ],
        "action_on_fail": "reject_with_reason"
      }
    ],

    "review_queue": {
      "priority": "fifo",
      "batch_size": 50,
      "reviewer_capacity": 200,
      "escalation_threshold_hours": 36
    },

    "rejection_reasons": [
      "low_resolution",
      "wrong_biome",
      "no_storm_effect",
      "ui_visible",
      "inappropriate_content",
      "duplicate_submission",
      "external_watermark",
      "photoshopped",
      "off_theme"
    ]
  },

  "rewards": {
