    {
      "id": "technical_health",
      "name": "Technical Health & Stability",
      "category": "technical",
      "metrics": [
        {
          "id": "crash_free_rate",
          "name": "Crash-Free Rate",
          "description": "Percentage of sessions without crashes",
          "unit": "percentage",
          "target": 98.5,
          "warning_threshold": 98.0,
          "critical_threshold": 97.0,
          "current_value": null,
          "data_source": "telemetry.crashes",
          "calculation": "(total_sessions - crashed_sessions) / total_sessions * 100",
          "frequency": "real_time"
        },
        {
          "id": "p95_gpu_frame_time",
          "name": "p95 GPU Frame Time",
          "description": "95th percentile GPU frame render time",
          "unit": "milliseconds",
          "target": 16.6,
          "warning_threshold": 18.0,
          "critical_threshold": 20.0,
          "current_value": null,
          "data_source": "telemetry.performance.gpu",
          "frequency": "real_time"
        },
        {
          "id": "hitch_rate",
          "name": "Hitch Rate",
          "description": "Frame time spikes > 2ms",
          "unit": "milliseconds",
          "target": 2.0,
          "warning_threshold": 3.0,
          "critical_threshold": 5.0,
          "current_value": null,
          "data_source": "telemetry.performance.hitches",
          "frequency": "real_time"
        },
        {
          "id": "server_latency_p95",
          "name": "Server Latency (p95)",
          "description": "95th percentile API response time",
          "unit": "milliseconds",
          "target": 150,
          "warning_threshold": 200,
          "critical_threshold": 300,
          "current_value": null,
          "data_source": "server.metrics.latency",
          "frequency": "real_time"
