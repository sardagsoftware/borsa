# LCI API - Production Environment Variables
# Copy to Vercel environment variables dashboard

# Database (PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# Application
NODE_ENV="production"
PORT="3201"
BASE_URL="https://lci-api.ailydian.com"
FRONTEND_URL="https://www.ailydian.com"

# CORS Origins (comma-separated)
CORS_ORIGINS="https://www.ailydian.com,https://ailydian.com"

# Rate Limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# File Upload
MAX_FILE_SIZE="10485760"
UPLOAD_DEST="./uploads"

# Email Notifications (Optional - for Phase 2)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# SMTP_FROM="noreply@ailydian.com"

# Webhook Delivery (Optional - for Phase 2)
# WEBHOOK_TIMEOUT="30000"
# WEBHOOK_RETRY_MAX="3"

# Security
# CSRF_SECRET="your-csrf-secret-key"

# Logging
LOG_LEVEL="info"

# Feature Flags
ENABLE_SWAGGER="false"
ENABLE_METRICS="true"
ENABLE_HEALTH_CHECK="true"
