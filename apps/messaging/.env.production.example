# SHARD_14 - Production Environment Variables
# Copy this to .env.production and fill in values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://messaging.ailydian.com
PORT=3200

# Redis (Required for message delivery)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# TURN/STUN Servers (for WebRTC)
NEXT_PUBLIC_TURN_URL=turn:turn.ailydian.com:3478
NEXT_PUBLIC_TURN_USERNAME=
NEXT_PUBLIC_TURN_CREDENTIAL=
NEXT_PUBLIC_STUN_URL=stun:stun.ailydian.com:3478

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=changeme_use_64_char_random_string_in_production
CSRF_SECRET=changeme_use_64_char_random_string_in_production

# Feature Flags
ENABLE_LOCATION_SHARING=true
ENABLE_VIDEO_CALLS=true
ENABLE_FILE_SHARING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600
