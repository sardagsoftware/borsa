# Lydian-IQ Console Environment Configuration
# Copy to .env.local and configure for your environment

# Next.js Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:3100

# UI Request Throttling
# Maximum concurrent requests from UI to gateway
NEXT_PUBLIC_MAX_CONCURRENT=4

# Force Show Menus (for debugging only - set to false in production)
# When true, menus always show even if capabilities endpoint fails
NEXT_PUBLIC_UI_FORCE_SHOW_MENUS=false

# Default Role (for fallback capabilities)
# Used when capabilities endpoint is unavailable
NEXT_PUBLIC_UI_DEFAULT_ROLE=user

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_ESG=true
NEXT_PUBLIC_ENABLE_CIVIC_GRID=true
