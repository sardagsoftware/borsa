# LyDian Trader - Environment Variables Example
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_NAME=LyDian Trader

# CoinMarketCap API (Required for real data)
# Get your API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Binance API (Optional - for enhanced features)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# Database (If using)
DATABASE_URL=your_database_connection_string

# NextAuth (If using authentication)
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your_secret_key_here

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Sentry (Optional - for error tracking)
SENTRY_DSN=your_sentry_dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_BOT_TRADING=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000