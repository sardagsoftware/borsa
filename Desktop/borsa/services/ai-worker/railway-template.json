{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "AILYDIAN AI Worker",
  "description": "AI Trading Bot Microservice - TensorFlow + ONNX Runtime",
  "source": {
    "repo": "sardagsoftware/borsa",
    "branch": "backup/lfs-preclean",
    "directory": "services/ai-worker"
  },
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 300
  },
  "env": {
    "PORT": {
      "description": "HTTP server port",
      "default": "8080"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "default": "production"
    },
    "AI_API_KEY": {
      "description": "AI API authentication key",
      "generator": "secret"
    },
    "HMAC_SECRET": {
      "description": "HMAC secret for request signing",
      "generator": "secret"
    }
  }
}
