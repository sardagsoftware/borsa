        };

        // ========== EVENT LISTENERS ==========

        // Sidebar toggle
        if (elements.sidebarToggle && elements.sidebar) {
            elements.sidebarToggle.addEventListener('click', () => {
                console.log('üîò Sidebar toggle clicked');
