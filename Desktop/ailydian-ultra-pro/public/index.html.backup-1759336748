    <script>
        // Typewriter effect with color transitions
        (function() {
            const texts = [
                'Yapay zeka ile geleceği şekillendirin',
                'AI ile sınırsız yaratıcılık',
                'Gelişmiş yapay zeka modelleri',
                'İş süreçlerinizi optimize edin'
            ];
            const colors = ['#10A37F', '#1A1A1A', '#FF6B4A'];
            let textIndex = 0;
            let charIndex = 0;
            let isDeleting = false;
            let colorIndex = 0;
            const typewriterElement = document.getElementById('typewriter-text');

            function typeWriter() {
                const currentText = texts[textIndex];

                if (isDeleting) {
                    // Delete character
                    charIndex--;
                    typewriterElement.textContent = currentText.substring(0, charIndex);

                    if (charIndex === 0) {
                        isDeleting = false;
                        textIndex = (textIndex + 1) % texts.length;
                        colorIndex = (colorIndex + 1) % colors.length;
                        setTimeout(typeWriter, 500);
                        return;
                    }
                } else {
                    // Type character
                    charIndex++;
                    typewriterElement.textContent = currentText.substring(0, charIndex);

                    // Update color smoothly as typing
                    const progress = charIndex / currentText.length;
                    typewriterElement.style.color = colors[colorIndex];

                    if (charIndex === currentText.length) {
                        // Wait before deleting
                        setTimeout(() => {
                            isDeleting = true;
                            typeWriter();
                        }, 2500);
                        return;
                    }
                }

                // Typing speed
                const typingSpeed = isDeleting ? 50 : 100;
                setTimeout(typeWriter, typingSpeed);
            }

            // Start typewriter effect
            setTimeout(typeWriter, 1000);
        })();

        // Video loading and autoplay handler
        (function() {
            const heroVideo = document.getElementById('hero-video');
            if (heroVideo) {
                // Ensure video plays
                heroVideo.addEventListener('loadeddata', function() {
                    heroVideo.play().catch(err => {
                        console.log('Video autoplay prevented:', err);
                    });
                });

                // Fallback: try to play on user interaction
                document.addEventListener('click', function playOnInteraction() {
                    heroVideo.play().catch(() => {});
                    document.removeEventListener('click', playOnInteraction);
                }, { once: true });

                // Error handling for video sources
                heroVideo.addEventListener('error', function() {
                    console.log('Video failed to load, trying next source');
                });
            }
        })();

        // Navbar scroll effect
        const navbar = document.querySelector('.navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Intersection Observer for fade-in animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Copy API code function
        function copyApiCode() {
            const codeElement = document.getElementById('api-code');
            const textToCopy = `POST /api/chat

{
  "model": "lydian-turbo",
  "message": "Merhaba!",
  "temperature": 0.7
}

────────────────────────────────────

200 OK

{
  "response": "Merhaba! LyDian'a hoş geldiniz. Size nasıl yardımcı olabilirim?"
}`;

            navigator.clipboard.writeText(textToCopy).then(() => {
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = 'Kopyalandı!';
                setTimeout(() => {
                    button.textContent = originalText;
                }, 2000);
            }).catch(err => {
                console.error('Kopyalama başarısız:', err);
            });
        }

        // Create floating particles
        function createParticles() {
            const heroBackground = document.querySelector('.hero-background');
            const particleCount = 20;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'floating-particle';

                const size = Math.random() * 40 + 10;
                particle.style.width = size + 'px';
                particle.style.height = size + 'px';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                particle.style.animationDelay = Math.random() * 5 + 's';

                heroBackground.appendChild(particle);
            }
        }

        // Initialize particles on page load
        window.addEventListener('load', createParticles);

        // Initialize language selector
        document.addEventListener('DOMContentLoaded', function() {
            const langContainer = document.getElementById('languageSelector');
            if (langContainer && window.AILYDIAN_LANG) {
                const selector = window.AILYDIAN_LANG.createSelector();
                langContainer.appendChild(selector);

                // Add click handlers to language options
                selector.querySelectorAll('.language-option').forEach(option => {
                    option.addEventListener('click', () => {
                        const lang = option.getAttribute('data-lang');
                        window.AILYDIAN_LANG.change(lang);
                    });
                });
            }
        });

        // Ensure videos keep playing
        window.addEventListener('load', () => {
            // Hero video
            const heroVideo = document.querySelector('.hero-video');
            if (heroVideo) {
                heroVideo.load();
                setTimeout(() => {
                    heroVideo.play().catch(err => {
                        console.log('Hero video autoplay prevented:', err);
                        heroVideo.addEventListener('click', () => {
                            heroVideo.play();
                        });
                    });
                }, 100);

                document.addEventListener('scroll', () => {
                    if (heroVideo.paused) {
                        heroVideo.play().catch(err => console.log('Hero video play prevented:', err));
                    }
                });

                heroVideo.addEventListener('loadeddata', () => {
                    console.log('Hero video loaded successfully');
                });

                heroVideo.addEventListener('error', (e) => {
                    console.error('Hero video error:', e);
                });
            }

            // AI demo video (showcase section)
            const video = document.querySelector('.ai-demo-video');
            if (video) {
                video.load();
                setTimeout(() => {
                    video.play().catch(err => {
                        console.log('Video autoplay prevented:', err);
                        video.addEventListener('click', () => {
                            video.play();
                        });
                    });
                }, 100);

                document.addEventListener('scroll', () => {
                    if (video.paused) {
                        video.play().catch(err => console.log('Video play prevented:', err));
                    }
                });

                video.addEventListener('loadeddata', () => {
                    console.log('Video loaded successfully');
                });

                video.addEventListener('error', (e) => {
                    console.error('Video error:', e);
                });
            }
        });
    </script>
</body>
</html>
