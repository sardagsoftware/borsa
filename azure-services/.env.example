# Azure Services Configuration for AiLydian Ultra Pro
# Copy this file to .env and fill in your actual values

# ========================================
# Azure Core Credentials
# ========================================
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# ========================================
# Azure Resource Configuration
# ========================================
AZURE_RESOURCE_GROUP=ailydian-enterprise-rg
AZURE_LOCATION=West Europe
AZURE_KEYVAULT_URL=https://ailydian-vault.vault.azure.net/

# ========================================
# Azure Maps Configuration
# ========================================
AZURE_MAPS_SUBSCRIPTION_KEY=your-azure-maps-subscription-key
AZURE_MAPS_CLIENT_ID=your-azure-maps-client-id

# ========================================
# Azure Container Apps Configuration
# ========================================
AZURE_CONTAINER_APPS_ENVIRONMENT=ailydian-env

# ========================================
# Azure DevOps Configuration
# ========================================
AZURE_DEVOPS_ORGANIZATION=ailydian-enterprise
AZURE_DEVOPS_PROJECT=ailydian-ultra-pro
AZURE_DEVOPS_TOKEN=your-azure-devops-personal-access-token

# ========================================
# Security Configuration
# ========================================
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=3600000
REQUIRE_MFA=false
ENCRYPTION_KEY=your-32-character-encryption-key

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# Azure Monitoring and Telemetry
# ========================================
AZURE_ENABLE_TELEMETRY=true
AZURE_LOG_LEVEL=info

# ========================================
# Service-Specific Log Levels (Optional)
# ========================================
AZURE_CONFIG_LOG_LEVEL=info
AZURE_CONTAINER_APPS_LOG_LEVEL=info
AZURE_DEVOPS_LOG_LEVEL=info
AZURE_MAPS_LOG_LEVEL=info
AZURE_WEATHER_LOG_LEVEL=info
SECURITY_LOG_LEVEL=info
PERFORMANCE_LOG_LEVEL=info
AUDIT_LOG_LEVEL=info
API_GATEWAY_LOG_LEVEL=info
WEBSOCKET_LOG_LEVEL=info

# ========================================
# Rate Limiting Configuration (Optional)
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAPS_MAX=50
RATE_LIMIT_WEATHER_MAX=30
RATE_LIMIT_ADMIN_MAX=10

# ========================================
# Cache Configuration (Optional)
# ========================================
CACHE_TTL_DEFAULT=600
CACHE_TTL_SESSION=1800
CACHE_TTL_AI_RESPONSE=3600
CACHE_TTL_STATIC=86400
CACHE_MAX_KEYS=10000

# ========================================
# WebSocket Configuration (Optional)
# ========================================
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_CONNECTION_TIMEOUT=60000
WEBSOCKET_MAX_CONNECTIONS=1000

# ========================================
# File Upload Configuration (Optional)
# ========================================
MAX_FILE_SIZE=52428800
MAX_FIELD_SIZE=10485760
UPLOAD_DIRECTORY=./uploads

# ========================================
# Database Configuration (if needed)
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/ailydian_ultra_pro
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000

# ========================================
# Redis Configuration (if needed)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ========================================
# External Service Configuration
# ========================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_CAPACITY=30000
OPENAI_HOST=https://api.openai.com

# Microsoft Translator (backup)
MICROSOFT_TRANSLATOR_KEY=your-microsoft-translator-key

# Google Translate (backup)
GOOGLE_TRANSLATE_KEY=your-google-translate-key

# ========================================
# Development Configuration
# ========================================
# Set to true to enable detailed debug logging
DEBUG_MODE=false

# Set to true to enable API documentation endpoint
ENABLE_API_DOCS=true

# Set to true to enable development tools
ENABLE_DEV_TOOLS=true

# Set to true to enable CORS for all origins (development only)
ENABLE_CORS_ALL=false

# ========================================
# Production Configuration
# ========================================
# Set to true in production for enhanced security
PRODUCTION_MODE=false

# Set to true to enable request logging in production
ENABLE_REQUEST_LOGGING=true

# Set to true to enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Set to true to enable error reporting
ENABLE_ERROR_REPORTING=true

# ========================================
# Backup and Recovery
# ========================================
BACKUP_STORAGE_ACCOUNT=your-backup-storage-account
BACKUP_CONTAINER=ailydian-backups
BACKUP_SCHEDULE=0 2 * * *

# ========================================
# SSL/TLS Configuration (Production)
# ========================================
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CA_PATH=/path/to/ssl/ca.pem
FORCE_HTTPS=false

# ========================================
# Custom Configuration
# ========================================
# Add any custom environment variables here
CUSTOM_API_ENDPOINT=https://api.example.com
CUSTOM_SERVICE_KEY=your-custom-service-key