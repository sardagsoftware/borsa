# TourismPulse AI Environment Variables
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_URL=https://travel.ailaydian.com
NEXT_PUBLIC_API_URL=https://travel.ailaydian.com/api
NEXT_PUBLIC_SITE_NAME=TourismPulse AI
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Tourism Platform

# Analytics & Tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS=1

# External API Keys
OPENAI_API_KEY=sk-your-openai-key-here
GROQ_API_KEY=gsk_your-groq-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=AIza-your-gemini-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
GOOGLE_MAPS_API_KEY=AIza-your-google-maps-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-key

# Database URLs
DATABASE_URL=postgresql://user:pass@host:port/db
REDIS_URL=redis://user:pass@host:port

# Authentication
NEXTAUTH_SECRET=your-super-secure-secret-min-32-chars
NEXTAUTH_URL=https://travel.ailaydian.com

# Email Service (Resend recommended for Vercel)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=re_your-resend-api-key

# Optional: Third-party integrations
SENTRY_DSN=your-sentry-dsn
MIXPANEL_TOKEN=your-mixpanel-token
