    <script>
        // Configuration
        const EMAIL_ACCOUNTS = [
            { id: 'admin', name: 'Admin', email: 'admin@ailydian.com', icon: 'üëë', unread: 5 },
            { id: 'support', name: 'Support', email: 'support@ailydian.com', icon: 'üõ†Ô∏è', unread: 12 },
            { id: 'info', name: 'Info', email: 'info@ailydian.com', icon: '‚ÑπÔ∏è', unread: 3 },
            { id: 'emrah', name: 'Emrah', email: 'emrah@ailydian.com', icon: 'üë§', unread: 8 },
            { id: 'sales', name: 'Sales', email: 'sales@ailydian.com', icon: 'üí∞', unread: 0 },
            { id: 'contact', name: 'Contact', email: 'contact@ailydian.com', icon: 'üìÆ', unread: 2 },
            { id: 'hello', name: 'Hello', email: 'hello@ailydian.com', icon: 'üëã', unread: 0 },
            { id: 'team', name: 'Team', email: 'team@ailydian.com', icon: 'üë•', unread: 6 },
            { id: 'security', name: 'Security', email: 'security@ailydian.com', icon: 'üîí', unread: 1 },
            { id: 'noreply', name: 'No Reply', email: 'noreply@ailydian.com', icon: 'üö´', unread: 0 }
        ];

        // Mock email data
        const MOCK_EMAILS = {
            'admin': [
                { from: 'John Doe', time: '10:30', subject: 'Q4 Report Review', preview: 'Please review the Q4 financial report attached...', unread: true, labels: ['Important', 'Finance'] },
                { from: 'Jane Smith', time: 'D√ºn', subject: 'System Update Notice', preview: 'Scheduled maintenance this weekend...', unread: false, labels: ['System'] },
            ],
            'support': [
                { from: 'Alice Johnson', time: '11:45', subject: 'Login Issue', preview: 'I am unable to log in to my account...', unread: true, labels: ['Urgent', 'Support'] },
                { from: 'Bob Williams', time: '09:15', subject: 'Feature Request', preview: 'Could you add dark mode support?', unread: true, labels: ['Enhancement'] },
            ],
            'info': [
                { from: 'Contact Form', time: '13:20', subject: 'New Inquiry', preview: 'Someone submitted a contact form...', unread: true, labels: ['Lead'] },
            ],
            'emrah': [
                { from: 'GitHub', time: '15:00', subject: 'Pull Request Merged', preview: 'Your pull request has been merged...', unread: true, labels: ['GitHub', 'Dev'] },
                { from: 'Vercel', time: '14:30', subject: 'Deployment Successful', preview: 'Your project has been deployed...', unread: true, labels: ['Vercel', 'Deploy'] },
            ]
        };

        // State
        let currentAccount = 'admin';
        let sidebarOpen = true;

        // DOM Elements
        const sidebar = document.getElementById('sidebar');
        const menuToggle = document.getElementById('menuToggle');
        const emailAccounts = document.getElementById('emailAccounts');
        const emailListContainer = document.getElementById('emailListContainer');
        const searchBox = document.getElementById('searchBox');
        const composeBtn = document.getElementById('composeBtn');
        const refreshBtn = document.getElementById('refreshBtn');
        const notificationBtn = document.getElementById('notificationBtn');

        // Initialize
        function init() {
            renderAccounts();
            selectAccount('admin');
            setupEventListeners();
            requestNotificationPermission();
            simulateRealTimeUpdates();
        }

        // Render accounts
        function renderAccounts() {
            emailAccounts.innerHTML = EMAIL_ACCOUNTS.map(account => `
                <div class="account-item ${account.id === currentAccount ? 'active' : ''}" data-account="${account.id}">
                    <div class="account-icon">${account.icon}</div>
                    <div class="account-info">
                        <span class="account-name">${account.name}</span>
                        <div class="account-email">${account.email}</div>
                    </div>
                    ${account.unread > 0 ? `<span class="unread-badge">${account.unread}</span>` : ''}
                </div>
            `).join('');
        }

        // Select account
        function selectAccount(accountId) {
            currentAccount = accountId;
            renderAccounts();
            renderEmails(accountId);
        }

        // Render emails
        function renderEmails(accountId) {
            const emails = MOCK_EMAILS[accountId] || [];

            if (emails.length === 0) {
                emailListContainer.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üì≠</div>
                        <div class="empty-title">Gelen Kutusu Bo≈ü</div>
                        <div class="empty-text">Hen√ºz email yok</div>
                    </div>
                `;
                return;
            }

            emailListContainer.innerHTML = emails.map((email, index) => `
                <div class="email-item ${email.unread ? 'unread' : ''}" data-index="${index}">
                    <div class="email-header">
                        <div class="sender-avatar">${email.from.charAt(0)}</div>
                        <div class="email-meta">
                            <div class="email-from">${email.from}</div>
                            <div class="email-time">${email.time}</div>
                        </div>
                    </div>
                    <div class="email-subject">${email.subject}</div>
                    <div class="email-preview">${email.preview}</div>
                    ${email.labels ? `
                        <div class="email-labels">
                            ${email.labels.map(label => `<span class="email-label">${label}</span>`).join('')}
                        </div>
                    ` : ''}
                </div>
            `).join('');
        }

        // Setup event listeners
        function setupEventListeners() {
            // Menu toggle
            menuToggle.addEventListener('click', () => {
                sidebarOpen = !sidebarOpen;
                sidebar.classList.toggle('open');
                if (window.innerWidth > 768) {
                    sidebar.classList.toggle('collapsed');
                }
            });

            // Account selection
            emailAccounts.addEventListener('click', (e) => {
                const accountItem = e.target.closest('.account-item');
                if (accountItem) {
                    const accountId = accountItem.dataset.account;
                    selectAccount(accountId);
                }
            });

            // Search
            searchBox.addEventListener('input', (e) => {
                // TODO: Implement search functionality
                console.log('Search:', e.target.value);
            });

            // Refresh
            refreshBtn.addEventListener('click', () => {
                showNotification('üîÑ', 'Yenileniyor...', 'Emailler kontrol ediliyor');
                setTimeout(() => {
                    showNotification('‚úÖ', 'G√ºncelleme Tamamlandƒ±', 'Yeni email bulunamadƒ±');
                }, 1500);
            });

            // Compose
            composeBtn.addEventListener('click', () => {
                showNotification('‚úèÔ∏è', 'Yeni Email', 'Email olu≈üturma √∂zelliƒüi yakƒ±nda...');
            });

            // Notifications
            notificationBtn.addEventListener('click', () => {
                showNotification('üîî', 'Bildirimler', 'Bildirim merkezi yakƒ±nda...');
            });

            // Email click
            emailListContainer.addEventListener('click', (e) => {
                const emailItem = e.target.closest('.email-item');
                if (emailItem) {
                    showNotification('üìß', 'Email A√ßƒ±lƒ±yor', 'Email detay g√∂r√ºn√ºm√º yakƒ±nda...');
                }
            });
        }

        // Show notification toast
        function showNotification(icon, title, message) {
            // Remove existing toasts
            document.querySelectorAll('.notification-toast').forEach(toast => toast.remove());

            const toast = document.createElement('div');
            toast.className = 'notification-toast';
            toast.innerHTML = `
                <div class="toast-icon">${icon}</div>
                <div class="toast-content">
                    <div class="toast-title">${title}</div>
                    <div class="toast-message">${message}</div>
                </div>
                <button class="toast-close">√ó</button>
            `;
            document.body.appendChild(toast);

            toast.querySelector('.toast-close').addEventListener('click', () => {
                toast.remove();
            });

            setTimeout(() => {
                toast.remove();
            }, 5000);
        }

        // Request notification permission
        async function requestNotificationPermission() {
            if ('Notification' in window && Notification.permission === 'default') {
                try {
                    await Notification.requestPermission();
                } catch (error) {
                    console.error('Notification permission error:', error);
                }
            }
        }

        // Show browser notification
        function showBrowserNotification(title, body, icon = 'üìß') {
            if ('Notification' in window && Notification.permission === 'granted') {
                new Notification(title, {
                    body: body,
                    icon: '/lydian-logo.png',
                    badge: '/lydian-logo.png',
                    tag: 'email-notification',
                    requireInteraction: false
                });
            }
        }

        // Simulate real-time updates
        function simulateRealTimeUpdates() {
            // Simulate new email every 30 seconds
            setInterval(() => {
                const randomAccount = EMAIL_ACCOUNTS[Math.floor(Math.random() * EMAIL_ACCOUNTS.length)];
                showNotification('üì¨', 'Yeni Email', `${randomAccount.email} - Yeni bir email aldƒ±nƒ±z`);
                showBrowserNotification('Yeni Email Alƒ±ndƒ±', `${randomAccount.name} hesabƒ±nƒ±zda yeni bir email var`);
            }, 30000);
        }

        // Start
        init();

        // Handle resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>
