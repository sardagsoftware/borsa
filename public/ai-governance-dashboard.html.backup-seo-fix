        let currentLang = 'tr';

        function toggleLanguage() {
            currentLang = currentLang === 'tr' ? 'en' : 'tr';
            updateLanguage();
            document.getElementById('lang-text').textContent = currentLang === 'tr' ? 'English' : 'T√ºrk√ße';
        }

        function updateLanguage() {
            const t = translations[currentLang];
            document.getElementById('home-text').textContent = t.homeButton;
            document.getElementById('main-title').textContent = t.mainTitle;
            document.getElementById('subtitle').textContent = t.subtitle;
            document.getElementById('intro-title').textContent = t.introTitle;
            document.getElementById('intro-desc').textContent = t.introDesc;
            document.getElementById('feature1-title').textContent = t.feature1Title;
            document.getElementById('feature1-desc').textContent = t.feature1Desc;
            document.getElementById('feature2-title').textContent = t.feature2Title;
            document.getElementById('feature2-desc').textContent = t.feature2Desc;
            document.getElementById('feature3-title').textContent = t.feature3Title;
            document.getElementById('feature3-desc').textContent = t.feature3Desc;
            document.getElementById('feature4-title').textContent = t.feature4Title;
            document.getElementById('feature4-desc').textContent = t.feature4Desc;
            document.getElementById('feature5-title').textContent = t.feature5Title;
            document.getElementById('feature5-desc').textContent = t.feature5Desc;
            document.getElementById('feature6-title').textContent = t.feature6Title;
            document.getElementById('feature6-desc').textContent = t.feature6Desc;
            document.getElementById('compliance-title').textContent = t.complianceTitle;
            document.getElementById('trust-title').textContent = t.trustTitle;
            document.getElementById('emergency-title').textContent = t.emergencyTitle;
            document.getElementById('api-title').textContent = t.apiTitle;
            document.getElementById('loading-compliance').textContent = t.loadingCompliance;
            document.getElementById('loading-trust').textContent = t.loadingTrust;
            document.getElementById('loading-emergency').textContent = t.loadingEmergency;
            document.getElementById('btn-validate').textContent = t.btnValidate;
            document.getElementById('btn-calculate').textContent = t.btnCalculate;
            document.getElementById('btn-killswitch').textContent = t.btnKillswitch;
            document.getElementById('api-compliance').textContent = t.apiCompliance;
            document.getElementById('api-trust').textContent = t.apiTrust;
            document.getElementById('api-emergency').textContent = t.apiEmergency;

            // Reload data with new language
            if (document.getElementById('compliance-content').innerHTML.indexOf('spinner') === -1) {
                loadCompliance();
                loadTrustIndex();
                loadEmergencyStatus();
            }
        }

        const API_BASE = window.location.origin;

        // Load data on page load
        window.addEventListener('load', () => {
            loadCompliance();
            loadTrustIndex();
            loadEmergencyStatus();
        });

        // Compliance Functions
        async function loadCompliance() {
            try {
                const response = await fetch(`${API_BASE}/api/governance/compliance/frameworks`);
                const data = await response.json();

                if (data.success) {
                    displayCompliance(data.data);
                } else {
                    throw new Error('Failed to load compliance data');
                }
            } catch (error) {
                const t = translations[currentLang];
                document.getElementById('compliance-content').innerHTML = `
                    <div style="color: #EF4444; padding: 20px; text-align: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-bottom: 10px;">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <br>
                        ${currentLang === 'tr' ? 'Uyumluluk verileri y√ºklenirken hata' : 'Error loading compliance data'}<br>
                        <small>${error.message}</small>
                    </div>
                `;
            }
        }

        function displayCompliance(frameworks) {
            const t = translations[currentLang];
            const html = `
                <ul class="framework-list">
                    ${frameworks.map(f => `
                        <li class="framework-item">
                            <div class="framework-name">${f.name}</div>
                            <div class="framework-region">
                                ${f.region} ‚Ä¢ ${f.requirementCount} ${t.requirements}
                            </div>
                        </li>
                    `).join('')}
                </ul>
                <div class="metric">
                    <span class="metric-label">${t.totalFrameworks}</span>
                    <span class="metric-value">${frameworks.length}</span>
                </div>
            `;
            document.getElementById('compliance-content').innerHTML = html;
        }

        // Trust Index Functions
        async function loadTrustIndex() {
            try {
                const response = await fetch(`${API_BASE}/api/governance/trust-index/stats`);
                const data = await response.json();

                if (data.success) {
                    displayTrustIndex(data.data);
                } else {
                    throw new Error('Failed to load trust data');
                }
            } catch (error) {
                document.getElementById('trust-content').innerHTML = `
                    <div style="color: #EF4444; padding: 20px; text-align: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-bottom: 10px;">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <br>
                        ${currentLang === 'tr' ? 'G√ºven verileri y√ºklenirken hata' : 'Error loading trust data'}<br>
                        <small>${error.message}</small>
                    </div>
                `;
            }
        }

        function displayTrustIndex(stats) {
            const t = translations[currentLang];
            const tierIcons = {
                PLATINUM: '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>',
                GOLD: '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10"/></svg>',
                SILVER: '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><rect x="3" y="3" width="18" height="18" rx="2"/></svg>',
                BRONZE: '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>'
            };

            const html = `
                <div class="metric">
                    <span class="metric-label">${t.totalModels}</span>
                    <span class="metric-value">${stats.totalModels}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">${t.averageScore}</span>
                    <span class="metric-value">${stats.averageScore.toFixed(1)}</span>
                </div>
                <div style="margin-top: 20px;">
                    <div style="margin-bottom: 10px; color: var(--gray-600); font-weight: 600;">${t.tierDistribution}</div>
                    <div>
                        <span class="badge badge-platinum">${tierIcons.PLATINUM} Platinum: ${stats.tierDistribution.PLATINUM}</span>
                        <span class="badge badge-gold">${tierIcons.GOLD} Gold: ${stats.tierDistribution.GOLD}</span>
                        <span class="badge badge-silver">${tierIcons.SILVER} Silver: ${stats.tierDistribution.SILVER}</span>
                        <span class="badge badge-bronze">${tierIcons.BRONZE} Bronze: ${stats.tierDistribution.BRONZE}</span>
                    </div>
                </div>
            `;
            document.getElementById('trust-content').innerHTML = html;
        }

        // Emergency Functions
        async function loadEmergencyStatus() {
            try {
                const response = await fetch(`${API_BASE}/api/governance/emergency/status`);
                const data = await response.json();

                if (data.success) {
                    displayEmergencyStatus(data.data);
                } else {
                    throw new Error('Failed to load emergency status');
                }
            } catch (error) {
                document.getElementById('emergency-content').innerHTML = `
                    <div style="color: #EF4444; padding: 20px; text-align: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-bottom: 10px;">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <br>
                        ${currentLang === 'tr' ? 'Acil durum durumu y√ºklenirken hata' : 'Error loading emergency status'}<br>
                        <small>${error.message}</small>
                    </div>
                `;
            }
        }

        function displayEmergencyStatus(status) {
            const t = translations[currentLang];
            const summary = status.summary;
            const html = `
                <div class="metric">
                    <span class="metric-label">
                        <span class="status-indicator ${summary.activeKillSwitches > 0 ? 'status-error' : 'status-active'}"></span>
                        ${t.activeKillSwitches}
                    </span>
                    <span class="metric-value">${summary.activeKillSwitches}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">
                        <span class="status-indicator ${summary.openCircuitBreakers > 0 ? 'status-warning' : 'status-active'}"></span>
                        ${t.openCircuitBreakers}
                    </span>
                    <span class="metric-value">${summary.openCircuitBreakers}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">${t.totalCircuitBreakers}</span>
                    <span class="metric-value">${summary.totalCircuitBreakers}</span>
                </div>
                ${summary.recentEmergencies.length > 0 ? `
                    <div style="margin-top: 20px;">
                        <div style="margin-bottom: 10px; color: var(--gray-600); font-weight: 600;">${t.recentEvents}</div>
                        <div class="emergency-log">
                            ${summary.recentEmergencies.slice(0, 5).map(e => `
                                <div class="log-entry">
                                    <div style="font-weight: 600; color: var(--gray-900);">${e.type.replace(/_/g, ' ')}</div>
                                    <div class="log-time">${new Date(e.timestamp).toLocaleString()}</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
            `;
            document.getElementById('emergency-content').innerHTML = html;
        }

        // Action Functions
        function refreshCompliance() {
            loadCompliance();
        }

        function refreshTrust() {
            loadTrustIndex();
        }

        function refreshEmergency() {
            loadEmergencyStatus();
        }

        async function runComplianceCheck() {
            const promptText = currentLang === 'tr'
                ? 'Doƒürulanacak Model ID\'sini girin:'
                : 'Enter Model ID to validate:';
            const modelId = prompt(promptText, 'test-model-' + Date.now());
            if (!modelId) return;

            try {
                const response = await fetch(`${API_BASE}/api/governance/compliance/validate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        modelId,
                        framework: 'GDPR'
                    })
                });
                const result = await response.json();

                if (result.success) {
                    const message = currentLang === 'tr'
                        ? `Uyumluluk Kontrol√º Tamamlandƒ±!\n\n√áer√ßeve: ${result.data.frameworkName}\nSkor: ${result.data.score}%\nDurum: ${result.data.compliant ? 'BA≈ûARILI ‚úÖ' : 'BA≈ûARISIZ ‚ùå'}\n\nGe√ßen: ${result.data.passedChecks}/${result.data.totalChecks}`
                        : `Compliance Check Complete!\n\nFramework: ${result.data.frameworkName}\nScore: ${result.data.score}%\nStatus: ${result.data.compliant ? 'PASS ‚úÖ' : 'FAIL ‚ùå'}\n\nPassed: ${result.data.passedChecks}/${result.data.totalChecks}`;
                    alert(message);
                } else {
                    alert((currentLang === 'tr' ? 'Hata: ' : 'Error: ') + result.error);
                }
            } catch (error) {
                const errorMsg = currentLang === 'tr'
                    ? 'Uyumluluk kontrol√º sƒ±rasƒ±nda hata: '
                    : 'Error running compliance check: ';
                alert(errorMsg + error.message);
            }
        }

        async function calculateTrust() {
            const promptText = currentLang === 'tr'
                ? 'Model ID\'sini girin:'
                : 'Enter Model ID:';
            const modelId = prompt(promptText, 'test-model-' + Date.now());
            if (!modelId) return;

            try {
                const response = await fetch(`${API_BASE}/api/governance/trust-index/calculate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        modelId,
                        transparency: 85,
                        accountability: 90,
                        fairness: 88,
                        privacy: 92,
                        robustness: 87
                    })
                });
                const result = await response.json();

                if (result.success) {
                    const message = currentLang === 'tr'
                        ? `G√ºven ƒ∞ndeksi Hesaplandƒ±!\n\nModel: ${result.data.modelId}\nSkor: ${result.data.globalTrustScore}\nSeviye: ${result.data.tier} ${result.data.badge}\n\nSkorlar:\n≈ûeffaflƒ±k: 85\nHesap Verebilirlik: 90\nAdillik: 88\nGizlilik: 92\nDayanƒ±klƒ±lƒ±k: 87`
                        : `Trust Index Calculated!\n\nModel: ${result.data.modelId}\nScore: ${result.data.globalTrustScore}\nTier: ${result.data.tier} ${result.data.badge}\n\nScores:\nTransparency: 85\nAccountability: 90\nFairness: 88\nPrivacy: 92\nRobustness: 87`;
                    alert(message);
                    loadTrustIndex();
                } else {
                    alert((currentLang === 'tr' ? 'Hata: ' : 'Error: ') + result.error);
                }
            } catch (error) {
                const errorMsg = currentLang === 'tr'
                    ? 'G√ºven hesaplama sƒ±rasƒ±nda hata: '
                    : 'Error calculating trust: ';
                alert(errorMsg + error.message);
            }
        }

        async function activateKillSwitch() {
            const warningText = currentLang === 'tr'
                ? '‚ö†Ô∏è UYARI: Kill Switch Aktivasyonu\n\nModel ID\'sini girin:'
                : '‚ö†Ô∏è WARNING: Activate Kill Switch\n\nEnter Model ID:';
            const modelId = prompt(warningText, 'test-model-' + Date.now());
            if (!modelId) return;

            const reasonText = currentLang === 'tr'
                ? 'Aktivasyon sebebini girin:'
                : 'Enter reason for activation:';
            const defaultReason = currentLang === 'tr' ? 'Acil kapatma' : 'Emergency shutdown';
            const reason = prompt(reasonText, defaultReason);
            if (!reason) return;

            try {
                const response = await fetch(`${API_BASE}/api/governance/emergency/kill-switch`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        modelId,
                        reason,
                        triggeredBy: 'dashboard-user'
                    })
                });
                const result = await response.json();

                if (result.success) {
                    const message = currentLang === 'tr'
                        ? `üö® Kill Switch Aktifle≈ütirildi!\n\nModel: ${result.data.modelId}\nDurum: ${result.data.status}\nSebep: ${result.data.reason}\n\nBu model i√ßin t√ºm baƒülantƒ± noktalarƒ± engellendi.`
                        : `üö® Kill Switch Activated!\n\nModel: ${result.data.modelId}\nStatus: ${result.data.status}\nReason: ${result.data.reason}\n\nAll endpoints for this model are now blocked.`;
                    alert(message);
                    loadEmergencyStatus();
                } else {
                    alert((currentLang === 'tr' ? 'Hata: ' : 'Error: ') + result.error);
                }
            } catch (error) {
                const errorMsg = currentLang === 'tr'
                    ? 'Kill switch aktivasyonu sƒ±rasƒ±nda hata: '
                    : 'Error activating kill switch: ';
                alert(errorMsg + error.message);
            }
        }
    </script>
</body>
</html>
