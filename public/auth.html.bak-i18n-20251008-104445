    <script>
        // ==========================================
        // üîí SECURITY CONFIGURATION
        // ==========================================
        const SECURITY_CONFIG = {
            maxLoginAttempts: 5,
            rateLimitWindow: 60000, // 1 minute
            passwordMinLength: 8,
            passwordRequireUppercase: true,
            passwordRequireNumber: true,
            passwordRequireSpecial: false
        };

        // Rate limiting state
        const rateLimiter = {
            attempts: {},
            isBlocked: function(key) {
                const now = Date.now();
                if (!this.attempts[key]) {
                    this.attempts[key] = [];
                }

                // Clean old attempts
                this.attempts[key] = this.attempts[key].filter(
                    time => now - time < SECURITY_CONFIG.rateLimitWindow
                );

                return this.attempts[key].length >= SECURITY_CONFIG.maxLoginAttempts;
            },
            recordAttempt: function(key) {
                if (!this.attempts[key]) {
                    this.attempts[key] = [];
                }
                this.attempts[key].push(Date.now());
            },
            getRemainingTime: function(key) {
                if (!this.attempts[key] || this.attempts[key].length === 0) return 0;
                const oldestAttempt = Math.min(...this.attempts[key]);
                const elapsed = Date.now() - oldestAttempt;
                return Math.max(0, Math.ceil((SECURITY_CONFIG.rateLimitWindow - elapsed) / 1000));
            }
        };

        let currentEmail = '';
        let tempUserId = null;
        let isExistingUser = false;
        let csrfToken = '';

        // ==========================================
        // üîí SECURITY: Get CSRF Token on page load
        // ==========================================
        window.addEventListener('DOMContentLoaded', async () => {
            // Check for OAuth configuration errors
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            const provider = urlParams.get('provider');

            if (error === 'oauth_not_configured' && provider) {
                const providerNames = {
                    google: 'Google',
                    microsoft: 'Microsoft',
                    github: 'GitHub',
                    apple: 'Apple'
                };
                const errorDiv = document.getElementById('email-error');
                if (errorDiv) {
                    errorDiv.textContent = `${providerNames[provider]} ile giri≈ü ≈üu anda kullanƒ±lamƒ±yor. L√ºtfen e-posta ile devam edin.`;
                    errorDiv.classList.remove('hidden');

                    // Clear error after 5 seconds
                    setTimeout(() => {
                        errorDiv.classList.add('hidden');
                        // Clean URL
                        window.history.replaceState({}, document.title, window.location.pathname);
                    }, 5000);
                }
            }

            try {
                const response = await fetch('/api/csrf-token', {
                    credentials: 'include'
                });
                const data = await response.json();
                csrfToken = data.csrfToken;
            } catch (error) {
                console.error('Failed to get CSRF token');
            }
        });

        // ==========================================
        // üîí SECURITY: Input Sanitization
        // ==========================================
        function sanitizeInput(input) {
            const div = document.createElement('div');
            div.textContent = input;
            return div.innerHTML;
        }

        function validateEmail(email) {
            const re = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$/;
            return re.test(email) && email.length <= 254;
        }

        function validatePassword(password) {
            const errors = [];

            if (password.length < SECURITY_CONFIG.passwordMinLength) {
                errors.push(`En az ${SECURITY_CONFIG.passwordMinLength} karakter olmalƒ±`);
            }

            if (SECURITY_CONFIG.passwordRequireUppercase && !/[A-Z]/.test(password)) {
                errors.push('En az bir b√ºy√ºk harf i√ßermeli');
            }

            if (SECURITY_CONFIG.passwordRequireNumber && !/[0-9]/.test(password)) {
                errors.push('En az bir rakam i√ßermeli');
            }

            if (SECURITY_CONFIG.passwordRequireSpecial && !/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
                errors.push('En az bir √∂zel karakter i√ßermeli');
            }

            return errors;
        }

        function calculatePasswordStrength(password) {
            let strength = 0;
            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) strength++;

            if (strength <= 2) return 'weak';
            if (strength <= 4) return 'medium';
            return 'strong';
        }

        // ==========================================
        // üîí SECURITY: Show error safely
        // ==========================================
        function showError(elementId, message) {
            const el = document.getElementById(elementId);
            if (el) {
                el.textContent = sanitizeInput(message);
                el.classList.remove('hidden');
            }
        }

        function hideError(elementId) {
            const el = document.getElementById(elementId);
            if (el) {
                el.classList.add('hidden');
            }
        }

        // ==========================================
        // üîí SECURITY: Rate Limiting UI
        // ==========================================
        function showRateLimitWarning() {
            const warning = document.getElementById('rate-limit-warning');
            const timeSpan = document.getElementById('rate-limit-time');
            warning.classList.remove('hidden');

            const updateTime = () => {
                const remaining = rateLimiter.getRemainingTime('login');
                if (remaining > 0) {
                    timeSpan.textContent = remaining;
                    setTimeout(updateTime, 1000);
                } else {
                    warning.classList.add('hidden');
                }
            };
            updateTime();
        }

        // ==========================================
        // üîí SECURITY: Fetch with CSRF and credentials
        // ==========================================
        async function secureFetch(url, options = {}) {
            const headers = {
                'Content-Type': 'application/json',
                'X-CSRF-Token': csrfToken,
                ...options.headers
            };

            return fetch(url, {
                ...options,
                credentials: 'include', // üîí httpOnly cookie i√ßin
                headers
            });
        }

        // OAuth Handlers
        async function handleGoogleAuth() {
            if (rateLimiter.isBlocked('oauth')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('oauth');
            window.location.href = '/api/auth/google';
        }

        async function handleMicrosoftAuth() {
            if (rateLimiter.isBlocked('oauth')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('oauth');
            window.location.href = '/api/auth/microsoft';
        }

        async function handleAppleAuth() {
            if (rateLimiter.isBlocked('oauth')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('oauth');
            window.location.href = '/api/auth/apple';
        }

        async function handleGithubAuth() {
            if (rateLimiter.isBlocked('oauth')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('oauth');
            window.location.href = '/api/auth/github';
        }

        // Email Submit Handler
        async function handleEmailSubmit(event) {
            event.preventDefault();
            hideError('email-error');

            const email = document.getElementById('email-input').value.trim();

            // üîí SECURITY: Validate email
            if (!validateEmail(email)) {
                showError('email-error', 'Ge√ßerli bir e-posta adresi girin');
                return;
            }

            // üîí SECURITY: Rate limiting
            if (rateLimiter.isBlocked('email-check')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('email-check');

            currentEmail = email;

            // Check if user exists
            try {
                const response = await secureFetch('/api/auth/check-email', {
                    method: 'POST',
                    body: JSON.stringify({ email: sanitizeInput(email) })
                });

                if (!response.ok) {
                    throw new Error('Hata olu≈ütu. L√ºtfen tekrar deneyin.');
                }

                const data = await response.json();
                isExistingUser = data.exists;

                if (isExistingUser) {
                    showPasswordStep();
                } else {
                    showRegisterStep();
                }
            } catch (error) {
                showError('email-error', error.message);
            }
        }

        // Password Submit Handler
        async function handlePasswordSubmit(event) {
            event.preventDefault();
            hideError('login-error');

            const password = document.getElementById('password-input').value;

            // üîí SECURITY: Rate limiting
            if (rateLimiter.isBlocked('login')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('login');

            const loginBtn = document.getElementById('login-btn');
            loginBtn.disabled = true;
            loginBtn.textContent = 'Giri≈ü yapƒ±lƒ±yor...';

            try {
                const response = await secureFetch('/api/auth/login', {
                    method: 'POST',
                    body: JSON.stringify({
                        email: sanitizeInput(currentEmail),
                        password
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'Giri≈ü ba≈üarƒ±sƒ±z');
                }

                if (data.data.requiresTwoFactor) {
                    tempUserId = data.data.userId;
                    showTwoFAModal();
                } else {
                    // üîí SECURITY: Token httpOnly cookie'de saklanƒ±yor, localStorage'da deƒüil
                    window.location.href = '/dashboard.html';
                }
            } catch (error) {
                showError('login-error', error.message);
            } finally {
                loginBtn.disabled = false;
                loginBtn.textContent = 'Giri≈ü Yap';
            }
        }

        // Register Submit Handler
        async function handleRegisterSubmit(event) {
            event.preventDefault();
            hideError('register-error');

            const name = document.getElementById('register-name').value.trim();
            const password = document.getElementById('register-password').value;

            // üîí SECURITY: Validate input
            if (name.length < 2) {
                showError('register-error', 'Ad soyad en az 2 karakter olmalƒ±');
                return;
            }

            const passwordErrors = validatePassword(password);
            if (passwordErrors.length > 0) {
                showError('register-error', passwordErrors.join(', '));
                return;
            }

            // üîí SECURITY: Rate limiting
            if (rateLimiter.isBlocked('register')) {
                showRateLimitWarning();
                return;
            }
            rateLimiter.recordAttempt('register');

            const registerBtn = document.getElementById('register-btn');
            registerBtn.disabled = true;
            registerBtn.textContent = 'Hesap olu≈üturuluyor...';

            try {
                const response = await secureFetch('/api/auth/register', {
                    method: 'POST',
                    body: JSON.stringify({
                        email: sanitizeInput(currentEmail),
                        password,
                        name: sanitizeInput(name)
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'Kayƒ±t ba≈üarƒ±sƒ±z');
                }

                // üîí SECURITY: Email verification gerekli, otomatik giri≈ü yok
                alert('Kayƒ±t ba≈üarƒ±lƒ±! L√ºtfen e-postanƒ±zƒ± doƒürulayƒ±n.');
                backToEmail();
            } catch (error) {
                showError('register-error', error.message);
            } finally {
                registerBtn.disabled = false;
                registerBtn.textContent = 'Hesap Olu≈ütur';
            }
        }

        // Password strength indicator
        document.getElementById('register-password')?.addEventListener('input', function(e) {
            const strength = calculatePasswordStrength(e.target.value);
            const bar = document.getElementById('strength-bar');
            bar.className = 'password-strength-bar ' + strength;
        });

        // UI Navigation Functions
        function showPasswordStep() {
            document.getElementById('auth-mode-login').classList.add('hidden');
            document.getElementById('register-step').classList.add('hidden');
            document.getElementById('password-step').classList.remove('hidden');
            document.getElementById('user-email-display').textContent = sanitizeInput(currentEmail);
        }

        function showRegisterStep() {
            document.getElementById('auth-mode-login').classList.add('hidden');
            document.getElementById('password-step').classList.add('hidden');
            document.getElementById('register-step').classList.remove('hidden');
            document.getElementById('register-email-display').textContent = sanitizeInput(currentEmail);
        }

        function backToEmail() {
            document.getElementById('auth-mode-login').classList.remove('hidden');
            document.getElementById('password-step').classList.add('hidden');
            document.getElementById('register-step').classList.add('hidden');
            currentEmail = '';
            hideError('email-error');
            hideError('login-error');
            hideError('register-error');
        }

        // 2FA Modal Functions
        function showTwoFAModal() {
            document.getElementById('twofa-modal').style.display = 'flex';
        }

        function closeTwoFAModal() {
            document.getElementById('twofa-modal').style.display = 'none';
            document.getElementById('twofa-code').value = '';
        }

        async function verifyTwoFactor() {
            const code = document.getElementById('twofa-code').value;

            if (code.length !== 6 || !/^\d{6}$/.test(code)) {
                alert('L√ºtfen 6 haneli sayƒ±sal kod girin');
                return;
            }

            try {
                const response = await secureFetch('/api/auth/verify-2fa', {
                    method: 'POST',
                    body: JSON.stringify({
                        userId: tempUserId,
                        token: code
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || '2FA doƒürulama ba≈üarƒ±sƒ±z');
                }

                // üîí SECURITY: Token httpOnly cookie'de
                window.location.href = '/dashboard.html';
            } catch (error) {
                alert(error.message);
            }
        }

        // Forgot Password Functions
        function showForgotPassword() {
            document.getElementById('forgot-password-modal').style.display = 'flex';
            document.getElementById('forgot-step-1').classList.remove('hidden');
            document.getElementById('forgot-step-2').classList.add('hidden');
        }

        function closeForgotPassword() {
            document.getElementById('forgot-password-modal').style.display = 'none';
            document.getElementById('forgot-email').value = '';
        }

        async function sendResetLink() {
            const email = document.getElementById('forgot-email').value.trim();

            if (!validateEmail(email)) {
                alert('Ge√ßerli bir e-posta adresi girin');
                return;
            }

            try {
                await secureFetch('/api/password-reset/request', {
                    method: 'POST',
                    body: JSON.stringify({ email: sanitizeInput(email) })
                });

                // üîí SECURITY: Always show success (prevents email enumeration)
                document.getElementById('forgot-step-1').classList.add('hidden');
                document.getElementById('forgot-step-2').classList.remove('hidden');
            } catch (error) {
                // üîí SECURITY: Still show success
                document.getElementById('forgot-step-1').classList.add('hidden');
                document.getElementById('forgot-step-2').classList.remove('hidden');
            }
        }

        // Close modals on outside click
        window.onclick = function(event) {
            const twofaModal = document.getElementById('twofa-modal');
            const forgotModal = document.getElementById('forgot-password-modal');

            if (event.target === twofaModal) {
                closeTwoFAModal();
            }
            if (event.target === forgotModal) {
                closeForgotPassword();
            }
        }

        // üîí SECURITY: Prevent console access in production
        if (window.location.hostname !== 'localhost' && window.location.hostname !== '127.0.0.1') {
            console.log = function() {};
            console.error = function() {};
            console.warn = function() {};
        }
    </script>
    <script src="/js/mobile-menu-handler.js"></script>
</body>
