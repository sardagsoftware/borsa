    <script>
        // AiLydians Studio Interface Management
        class AiLydiansStudioInterface {
            constructor() {
                this.currentMode = 'welcome';
                this.chatHistory = [];
                this.activeModel = null;
                this.init();
            }

            init() {
                this.setupEventListeners();
                this.initializeI18n();
                this.showWelcome();
            }

            setupEventListeners() {
                // New Chat Button
                document.getElementById('newChatBtn').addEventListener('click', () => {
                    this.startNewChat();
                });

                // Chat Input
                const chatInput = document.getElementById('chatInput');
                const sendButton = document.getElementById('sendButton');

                chatInput.addEventListener('input', (e) => {
                    sendButton.disabled = !e.target.value.trim();
                });

                chatInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        this.sendMessage();
                    }
                });

                sendButton.addEventListener('click', () => {
                    this.sendMessage();
                });

                // Theme Toggle
                document.getElementById('themeToggle').addEventListener('click', () => {
                    this.toggleTheme();
                });
            }

            initializeI18n() {
                // Initialize internationalization if available
                if (window.FirildakI18N) {
                    this.i18n = new FirildakI18N();
                }
            }

            showWelcome() {
                document.getElementById('welcomeScreen').style.display = 'block';
                document.getElementById('chatInterface').style.display = 'none';
                this.currentMode = 'welcome';
            }

            showChat() {
                document.getElementById('welcomeScreen').style.display = 'none';
                document.getElementById('chatInterface').style.display = 'block';
                this.currentMode = 'chat';
                document.getElementById('chatInput').focus();
            }

            startNewChat() {
                this.chatHistory = [];
                document.getElementById('chatMessages').innerHTML = '';
                this.showWelcome();
            }

            async sendMessage() {
                const input = document.getElementById('chatInput');
                const message = input.value.trim();

                if (!message) return;

                // Add user message to chat
                this.addMessage('user', message);
                input.value = '';
                document.getElementById('sendButton').disabled = true;

                // Show loading
                const loadingId = this.addMessage('assistant', '', true);

                try {
                    // Send to FirildakAI
                    const response = await this.sendToAI(message);

                    // Remove loading and add response
                    this.removeMessage(loadingId);
                    this.addMessage('assistant', response);
                } catch (error) {
                    this.removeMessage(loadingId);
                    this.addMessage('assistant', '√úzg√ºn√ºm, bir hata olu≈ütu. L√ºtfen tekrar deneyin.');
                    console.error('Chat error:', error);
                }
            }

            addMessage(type, content, isLoading = false) {
                const messagesContainer = document.getElementById('chatMessages');
                const messageId = 'msg-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9);

                const messageElement = document.createElement('div');
                messageElement.className = `google-message ${type}`;
                messageElement.id = messageId;

                const avatar = document.createElement('div');
                avatar.className = 'google-message-avatar';
                avatar.textContent = type === 'user' ? 'U' : 'AI';

                const messageContent = document.createElement('div');
                messageContent.className = 'google-message-content';

                if (isLoading) {
                    messageContent.innerHTML = `
                        <div class="google-loading">
                            <div class="google-loading-dot"></div>
                            <div class="google-loading-dot"></div>
                            <div class="google-loading-dot"></div>
                        </div>
                        <span style="margin-left: 12px; color: var(--google-text-secondary);">D√º≈ü√ºn√ºyor...</span>
                    `;
                } else {
                    messageContent.textContent = content;
                }

                messageElement.appendChild(avatar);
                messageElement.appendChild(messageContent);
                messagesContainer.appendChild(messageElement);

                // Scroll to bottom
                messagesContainer.scrollTop = messagesContainer.scrollHeight;

                return messageId;
            }

            removeMessage(messageId) {
                const messageElement = document.getElementById(messageId);
                if (messageElement) {
                    messageElement.remove();
                }
            }

            async sendToAI(message) {
                // Use FirildakApp if available, otherwise fallback to simple API call
                if (window.FirildakApp && this.firildakApp) {
                    return await this.firildakApp.sendToAI(message);
                } else {
                    // Simple API fallback
                    const response = await fetch('/api/chat', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            message: message,
                            model: this.activeModel || 'auto'
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }

                    const data = await response.json();
                    return data.response || data.message || 'Yanƒ±t alƒ±namadƒ±';
                }
            }

            toggleTheme() {
                // Theme toggle implementation
                document.documentElement.classList.toggle('dark-theme');
                const themeToggle = document.getElementById('themeToggle');
                const icon = themeToggle.querySelector('.material-symbols-outlined');
                const text = themeToggle.lastChild;

                if (document.documentElement.classList.contains('dark-theme')) {
                    icon.textContent = 'dark_mode';
                    text.textContent = 'Dark';
                } else {
                    icon.textContent = 'light_mode';
                    text.textContent = 'Light';
                }
            }
        }

        // Capability Card Actions
        function startAzureChat() {
            lydiansStudio.activeModel = 'azure';
            lydiansStudio.showChat();
            lydiansStudio.addMessage('assistant', 'Azure AI Suite\'e ho≈ü geldiniz! OX5C9E2B Turbo, Document Intelligence ve Quantum hesaplama yeteneklerini kullanabiliriz. Size nasƒ±l yardƒ±mcƒ± olabilirim?');
        }

        function startGoogleChat() {
            lydiansStudio.activeModel = 'lydian-vision';
            lydiansStudio.showChat();
            lydiansStudio.addMessage('assistant', 'Google Vertex AI aktif! LyDian Vision Ultra ve PaLM 2 modelleri ile multimodal AI deneyimini ba≈ülatalƒ±m. Hangi konuda yardƒ±m istiyorsunuz?');
        }

        function startEnterprise AIChat() {
            lydiansStudio.activeModel = 'enterprise-ai';
            lydiansStudio.showChat();
            lydiansStudio.addMessage('assistant', 'Advanced AI Platform Premium Intelligence Model ile tanƒ±≈üƒ±n! G√ºvenli, etik ve geli≈ümi≈ü reasoning yetenekleri ile size yardƒ±mcƒ± olmaya hazƒ±rƒ±m. Ne √∂ƒürenmek istiyorsunuz?');
        }

        function startOrchestrationChat() {
            lydiansStudio.activeModel = 'orchestration';
            lydiansStudio.showChat();
            lydiansStudio.addMessage('assistant', 'AI Orchestration modu aktif! En uygun AI modelini otomatik olarak se√ßeceƒüim ve en iyi sonu√ßlarƒ± elde etmek i√ßin paralel i≈ülem y√∂netimi kullanacaƒüƒ±m.');
        }

        function showAnalytics() {
            window.open('/analytics', '_blank');
        }

        function showDeveloperTools() {
            window.open('/docs/api', '_blank');
        }

        // Initialize AiLydians Studio Interface
        let lydiansStudio;
        document.addEventListener('DOMContentLoaded', () => {
            lydiansStudio = new AiLydiansStudioInterface();

            // Initialize FirildakApp if available
            if (window.FirildakApp) {
                lydiansStudio.firildakApp = new FirildakApp();
            }
        });
    </script>
