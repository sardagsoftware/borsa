    <script>
        // Canlı istatistik güncellemeleri simülasyonu
        function updateStats() {
            // Çalışma süresi (her zaman yüksek)
            const uptime = (99.8 + Math.random() * 0.2).toFixed(1);
            document.getElementById('uptime-stat').textContent = uptime + '%';

            // Gecikme (rastgele dalgalanma)
            const latency = Math.floor(100 + Math.random() * 100);
            document.getElementById('latency-stat').textContent = latency + 'ms';

            // Doğrulama kapsamı
            const proof = (95 + Math.random() * 2).toFixed(1);
            document.getElementById('proof-stat').textContent = proof + '%';

            // Uyarılar (rastgele 0-3)
            const alerts = Math.floor(Math.random() * 4);
            document.getElementById('rro-alerts').textContent = alerts;

            // Anomaliler (rastgele 0-5)
            const anomalies = Math.floor(Math.random() * 6);
            document.getElementById('sci-anomalies').textContent = anomalies;
        }

        // Her 5 saniyede bir istatistikleri güncelle
        setInterval(updateStats, 5000);

        // İlk güncelleme
        updateStats();

        // Kaydırma animasyonları ekle
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.module-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.6s, transform 0.6s';
            observer.observe(card);
        });
    </script>
