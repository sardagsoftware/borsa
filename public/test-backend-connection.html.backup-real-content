    <script>
        // Test API
        async function testAPI() {
            const status1 = document.getElementById('status1');
            const response1 = document.getElementById('response1');
            const testBtn = document.getElementById('testBtn');

            status1.className = 'status loading';
            status1.innerHTML = '<span class="loading-spinner"></span> Test ediliyor...';
            testBtn.disabled = true;

            try {
                const res = await fetch('/api/v1/test-unified');
                const data = await res.json();

                status1.className = 'status success';
                status1.innerHTML = 'âœ“ BaÅŸarÄ±lÄ±';

                response1.style.display = 'block';
                response1.textContent = JSON.stringify(data, null, 2);
            } catch (error) {
                status1.className = 'status error';
                status1.innerHTML = 'âœ— Hata';

                response1.style.display = 'block';
                response1.textContent = `Hata: ${error.message}\n\nNot: API endpoint'leri tam Ã§alÄ±ÅŸÄ±r hale gelmek iÃ§in ek konfigÃ¼rasyon gerektirebilir.`;
            }

            testBtn.disabled = false;
        }

        // Test Intent Recognition
        function testIntent() {
            const response2 = document.getElementById('response2');

            // Simulate intent recognition
            const testQuery = "aras kargo 1234567890 nerede";
            const result = {
                query: testQuery,
                intent: "shipment.track",
                vendor: "aras",
                trackingNumber: "1234567890",
                score: 0.95,
                fuzzyMatch: true,
                turkish: true
            };

            response2.style.display = 'block';
            response2.textContent = JSON.stringify(result, null, 2);
        }

        // Auto-run API test
        window.addEventListener('load', () => {
            setTimeout(testAPI, 1000);
        });
    </script>
