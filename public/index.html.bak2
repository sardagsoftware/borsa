  <script type="module">
    import * as THREE from 'https://unpkg.com/three@0.160.1/build/three.module.js';

    // ========== Canvas Setup (Mobile Optimized) ==========
    const canvas = document.getElementById('orbit-stage');
    const isMobile = window.innerWidth <= 768;

    const renderer = new THREE.WebGLRenderer({
      canvas,
      antialias: !isMobile, // Disable antialiasing on mobile for better performance
      powerPreference: isMobile ? 'default' : 'high-performance',
      alpha: true
    });

    // Mobile: Use lower pixel ratio for better performance
    renderer.setPixelRatio(isMobile ? 1 : Math.min(window.devicePixelRatio, 2));
    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.outputColorSpace = THREE.SRGBColorSpace;

    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(
      isMobile ? 70 : 60, // Wider FOV on mobile for better view
      window.innerWidth / window.innerHeight,
      0.1,
      1000
    );
    camera.position.set(0, 5, 20);
    camera.lookAt(0, 0, 0);

    // ========== Window Resize Handler (Mobile Responsive) ==========
    function handleResize() {
      const width = window.innerWidth;
      const height = window.innerHeight;
      const isMobileNow = width <= 768;

      camera.aspect = width / height;
      camera.fov = isMobileNow ? 70 : 60;
      camera.updateProjectionMatrix();

      renderer.setSize(width, height);
      renderer.setPixelRatio(isMobileNow ? 1 : Math.min(window.devicePixelRatio, 2));
    }

    window.addEventListener('resize', handleResize);
    window.addEventListener('orientationchange', function() {
      setTimeout(handleResize, 100);
    });

    // ========== Advanced Texture Creator ==========
    function createPlanetTexture(color, pattern = 'solid', size = 512) {
      const canvas = document.createElement('canvas');
      canvas.width = size;
      canvas.height = size;
      const ctx = canvas.getContext('2d');
      const center = size / 2;

      // Base gradient
      const gradient = ctx.createRadialGradient(center * 0.7, center * 0.7, 0, center, center, center);
      gradient.addColorStop(0, color);
      gradient.addColorStop(0.7, color);
      gradient.addColorStop(1, `${color}33`);
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, size, size);

      // Detailed patterns
      if (pattern === 'sun') {
        // Solar flares and granulation
        ctx.globalCompositeOperation = 'lighter';
        for (let i = 0; i < 100; i++) {
          const x = Math.random() * size;
          const y = Math.random() * size;
          const radius = Math.random() * 20 + 5;
          const flareGrad = ctx.createRadialGradient(x, y, 0, x, y, radius);
          flareGrad.addColorStop(0, '#FFF4E6');
          flareGrad.addColorStop(1, 'transparent');
          ctx.fillStyle = flareGrad;
          ctx.beginPath();
          ctx.arc(x, y, radius, 0, Math.PI * 2);
          ctx.fill();
        }
      } else if (pattern === 'mercury') {
        // Craters
        ctx.fillStyle = 'rgba(100, 90, 70, 0.4)';
        for (let i = 0; i < 50; i++) {
          const x = Math.random() * size;
          const y = Math.random() * size;
          const radius = Math.random() * 15 + 5;
          ctx.beginPath();
          ctx.arc(x, y, radius, 0, Math.PI * 2);
          ctx.fill();
        }
      } else if (pattern === 'venus') {
        // Thick atmosphere clouds
        ctx.fillStyle = 'rgba(255, 220, 100, 0.3)';
        for (let i = 0; i < 30; i++) {
          ctx.beginPath();
          ctx.ellipse(
            Math.random() * size,
            Math.random() * size,
            Math.random() * 80 + 40,
            Math.random() * 30 + 10,
            Math.random() * Math.PI,
            0, Math.PI * 2
          );
          ctx.fill();
        }
      } else if (pattern === 'earth') {
        // Continents (green/brown)
        ctx.fillStyle = '#2E7D32';
        for (let i = 0; i < 35; i++) {
          ctx.beginPath();
          const x = Math.random() * size;
          const y = Math.random() * size;
          const width = Math.random() * 80 + 40;
          const height = Math.random() * 60 + 30;
          ctx.ellipse(x, y, width, height, Math.random() * Math.PI, 0, Math.PI * 2);
          ctx.fill();
        }
        // Clouds
        ctx.fillStyle = 'rgba(255, 255, 255, 0.5)';
        for (let i = 0; i < 25; i++) {
          ctx.beginPath();
          ctx.arc(Math.random() * size, Math.random() * size, Math.random() * 30 + 10, 0, Math.PI * 2);
          ctx.fill();
        }
      } else if (pattern === 'mars') {
        // Red desert and polar caps
        ctx.fillStyle = 'rgba(139, 69, 19, 0.4)';
        for (let i = 0; i < 40; i++) {
          ctx.fillRect(Math.random() * size, Math.random() * size, Math.random() * 60, Math.random() * 40);
        }
        // Polar ice
        ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
        ctx.beginPath();
        ctx.arc(center, 20, 40, 0, Math.PI * 2);
        ctx.fill();
      } else if (pattern === 'jupiter') {
        // Atmospheric bands
        const bands = 25;
        for (let i = 0; i < bands; i++) {
          const y = (i / bands) * size;
          const alpha = Math.random() * 0.3 + 0.2;
          ctx.fillStyle = i % 2 === 0 ? `rgba(200, 140, 60, ${alpha})` : `rgba(180, 120, 40, ${alpha})`;
          const wave = Math.sin(i * 0.5) * 10;
          ctx.fillRect(0, y + wave, size, size / bands + 2);
        }
        // Great Red Spot
        ctx.fillStyle = 'rgba(220, 80, 60, 0.8)';
        ctx.beginPath();
        ctx.ellipse(center * 1.3, center * 1.1, 60, 40, 0.3, 0, Math.PI * 2);
        ctx.fill();
      } else if (pattern === 'saturn') {
        // Subtle bands
        const bands = 20;
        for (let i = 0; i < bands; i++) {
          const y = (i / bands) * size;
          ctx.fillStyle = i % 2 === 0 ? 'rgba(244, 208, 63, 0.3)' : 'rgba(230, 190, 50, 0.3)';
          ctx.fillRect(0, y, size, size / bands);
        }
      } else if (pattern === 'uranus') {
        // Smooth cyan atmosphere
        ctx.fillStyle = 'rgba(100, 200, 220, 0.2)';
        for (let i = 0; i < 20; i++) {
          ctx.beginPath();
          ctx.arc(Math.random() * size, Math.random() * size, Math.random() * 50 + 20, 0, Math.PI * 2);
          ctx.fill();
        }
      } else if (pattern === 'neptune') {
        // Deep blue with storms
        ctx.fillStyle = 'rgba(30, 70, 150, 0.4)';
        for (let i = 0; i < 15; i++) {
          ctx.beginPath();
          ctx.arc(Math.random() * size, Math.random() * size, Math.random() * 40 + 15, 0, Math.PI * 2);
          ctx.fill();
        }
      }

      const texture = new THREE.CanvasTexture(canvas);
      texture.needsUpdate = true;
      return texture;
    }

