            setTimeout(() => {
              tooltip.style.opacity = '1';
            }, 10);
          } else {
            tooltip.style.left = event.clientX + 20 + 'px';
            tooltip.style.top = event.clientY + 20 + 'px';
          }
        }
      } else {
        if (hoveredCountry) {
          hoveredCountry = null;
          tooltip.style.opacity = '0';
          setTimeout(() => {
            tooltip.style.display = 'none';
          }, 300);
        }
      }
    }

    window.addEventListener('mousemove', onMouseMove, false);

    // ========== Responsive Resize ==========
    const onResize = () => {
      renderer.setSize(window.innerWidth, window.innerHeight);
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
    };
    window.addEventListener('resize', onResize);

    // ========== Animation Loop ==========
    const clock = new THREE.Clock();
    let rafId;
    const animate = () => {
      const t = clock.getElapsedTime();

      // Rotate Earth slowly (cinematic Kaspersky style)
      earth.rotation.y += 0.0005;

      // Animate Hub Markers (pulsing)
      hubMarkers.forEach(({ marker, glow, hub }, index) => {
        const pulse = Math.sin(t * 2 + index * 0.5) * 0.3 + 1;
        glow.scale.set(pulse, pulse, pulse);
        glow.material.opacity = (Math.sin(t * 2 + index * 0.5) * 0.2 + 0.3) * hub.intensity;
      });

      // Animate Data Flows
      dataFlows.forEach((flow, index) => {
        flow.progress += flow.speed;

        if (flow.progress >= 1) {
          flow.progress = 0;
          flow.life -= 0.5;
        }

        // Update particle position along curve
        const pos = flow.curve.getPoint(flow.progress);
        flow.particle.position.copy(pos);

        // Fade out old flows
        if (flow.life <= 0) {
          earth.remove(flow.line);
          earth.remove(flow.particle);
          dataFlows.splice(index, 1);
        }

        // Pulse particle
        const particlePulse = Math.sin(t * 5 + index) * 0.3 + 1;
        flow.particle.scale.set(particlePulse, particlePulse, particlePulse);
      });

      // Animate shooting stars
      shootingStars.forEach((star, index) => {
        star.line.position.z += star.speed;
        star.life -= 0.01;
        star.line.material.opacity = star.life;

        if (star.life <= 0 || star.line.position.z > 20) {
          scene.remove(star.line);
          shootingStars.splice(index, 1);
        }
      });

      // Smooth orbital camera
      camera.position.x = Math.sin(t * 0.05) * 22;
      camera.position.y = 5 + Math.cos(t * 0.07) * 3;
      camera.position.z = Math.cos(t * 0.05) * 22;
      camera.lookAt(0, 0, 0);

      // Rotate starfield slowly
      stars.rotation.y += 0.0002;

      renderer.render(scene, camera);
      rafId = requestAnimationFrame(animate);
    };
    animate();

    // ========== Cleanup ==========
    window.addEventListener('beforeunload', () => {
      cancelAnimationFrame(rafId);
      renderer.dispose();
      window.removeEventListener('resize', onResize);
