    };

    let currentStats = { ...baseStats };
    let currentTotals = { ...baseTotals };

    // Generate realistic fluctuation based on sine wave + noise
    function generateRealisticValue(base, time, category) {
      const seed = category.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
      const wave1 = Math.sin(time * 0.001 + seed) * 0.15;
      const wave2 = Math.sin(time * 0.003 + seed * 2) * 0.08;
      const noise = (Math.random() - 0.5) * 0.05;
      const growth = (time * 0.00001);

      const fluctuation = wave1 + wave2 + noise + growth;
      const newValue = Math.floor(base * (1 + fluctuation));

      return Math.max(0, newValue);
    }

    function formatNumber(num) {
      // Format with B (billion), M (million), K (thousand) suffix
      if (num >= 1000000000) {
        return (num / 1000000000).toFixed(2) + 'B';
      } else if (num >= 1000000) {
        return (num / 1000000).toFixed(2) + 'M';
      } else if (num >= 1000) {
        return (num / 1000).toFixed(1) + 'K';
      }
      return num.toString();
    }

    function updateAIStatistics() {
