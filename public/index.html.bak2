    // Very subtle ambient light (minimal lighting for dark cosmic atmosphere)
    const ambientLight = new THREE.AmbientLight(0x0a0a15, 0.8);
    scene.add(ambientLight);

    // ========== Convert Lat/Lon to 3D Position ==========
    function latLonToVector3(lat, lon, radius) {
      const phi = (90 - lat) * (Math.PI / 180);
      const theta = (lon + 180) * (Math.PI / 180);

      const x = -(radius * Math.sin(phi) * Math.cos(theta));
      const z = (radius * Math.sin(phi) * Math.sin(theta));
      const y = (radius * Math.cos(phi));

      return new THREE.Vector3(x, y, z);
    }

    // ========== Create AI Hub Markers (Kaspersky Style - Bright and Prominent) ==========
    const hubMarkers = [];
    aiHubs.forEach(hub => {
      const markerGeometry = new THREE.SphereGeometry(0.2, 16, 16); // Larger markers
      const markerMaterial = new THREE.MeshBasicMaterial({
        color: hub.color,
        transparent: true,
        opacity: 1.0 // Full brightness
      });
      const marker = new THREE.Mesh(markerGeometry, markerMaterial);

      const pos = latLonToVector3(hub.lat, hub.lon, earthRadius + 0.1);
      marker.position.copy(pos);
      earth.add(marker);

      // Bright pulsing glow (Kaspersky style)
      const glowGeometry = new THREE.SphereGeometry(0.35, 16, 16); // Larger glow
      const glowMaterial = new THREE.MeshBasicMaterial({
        color: hub.color,
        transparent: true,
        opacity: 0.6, // Brighter glow
        side: THREE.BackSide
      });
      const glow = new THREE.Mesh(glowGeometry, glowMaterial);
      marker.add(glow);

      hubMarkers.push({ marker, glow, hub, baseScale: 1 });
    });

    // ========== Create Country Amber Glow (Real AI Usage Data) ==========
    const countryGlows = [];
    let realTimeData = {}; // Ger√ßek zamanlƒ± AI kullanƒ±m verileri

    // Backend'den ger√ßek AI model kullanƒ±m verilerini √ßek
    async function fetchRealAIData() {
      try {
        const response = await fetch('/api/ai-usage-by-country');
        const data = await response.json();
        realTimeData = data;
        updateCountryGlows();
      } catch (error) {
        console.log('AI usage data endpoint not ready, using simulated data');
        // Ger√ßek backend hazƒ±r olana kadar sim√ºlasyon
        simulateAIUsageData();
      }
    }

    // Sim√ºle edilmi≈ü ger√ßek AI kullanƒ±m verileri (backend hazƒ±r olana kadar)
    function simulateAIUsageData() {
      countries.forEach(country => {
        // Ger√ßek√ßi AI kullanƒ±m yoƒüunluƒüu sim√ºlasyonu
        const baseIntensity = 0.3 + Math.random() * 0.7;
        realTimeData[country.name] = {
          totalRequests: Math.floor(Math.random() * 1000000),
          activeModels: Math.floor(Math.random() * 23) + 1,
