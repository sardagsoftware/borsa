  <script>
    // ========== State Management ==========
    let currentOpen = null;
    let hideTimeout = null;

    // ========== Mega Menu Toggle ==========
    const navLinks = document.querySelectorAll('[data-mega]');
    const megas = document.querySelectorAll('.mega');

    navLinks.forEach(link => {
      const megaId = link.getAttribute('data-mega');
      const mega = document.getElementById(`mega-${megaId}`);

      // Mouse enter
      link.addEventListener('mouseenter', () => {
        clearTimeout(hideTimeout);
        openMega(megaId, link, mega);
      });

      // Focus (keyboard)
      link.addEventListener('focus', () => {
        clearTimeout(hideTimeout);
        openMega(megaId, link, mega);
      });

      // Click toggle
      link.addEventListener('click', () => {
        if (currentOpen === megaId) {
          closeAllMegas();
        } else {
          openMega(megaId, link, mega);
        }
      });
    });

    // ========== Open Mega ==========
    function openMega(megaId, link, mega) {
      if (currentOpen === megaId) return;

      // Close others
      closeAllMegas();

      // Open new
      currentOpen = megaId;
      link.setAttribute('aria-expanded', 'true');
      mega.classList.add('active');
    }

    // ========== Close All Megas ==========
    function closeAllMegas() {
      currentOpen = null;
      navLinks.forEach(l => l.setAttribute('aria-expanded', 'false'));
      megas.forEach(m => m.classList.remove('active'));
    }

    // ========== Close on Mouse Leave Header ==========
    const header = document.querySelector('.header-2025');
    header.addEventListener('mouseleave', () => {
      hideTimeout = setTimeout(closeAllMegas, 300);
    });

    // ========== Close on Escape Key ==========
    window.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAllMegas();
      }
    });

    // ========== Smart Hide on Scroll ==========
    let lastScrollY = 0;
    let ticking = false;

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const currentScrollY = window.scrollY;

          if (Math.abs(currentScrollY - lastScrollY) > 10) {
            if (currentScrollY > lastScrollY && currentScrollY > 80) {
              header.setAttribute('data-hide', 'true');
              closeAllMegas();
            } else {
              header.setAttribute('data-hide', 'false');
            }
            lastScrollY = currentScrollY;
          }

          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });
  </script>

