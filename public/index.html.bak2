    // ========== Create CYBER THREAT MAP EARTH (Night View with City Lights) ==========
    const earthRadius = 8;
    const earthGeometry = new THREE.SphereGeometry(earthRadius, 256, 256);

    // NIGHT EARTH - Koyu gri ton, gece atmosferinden bakƒ±≈ü (kara par√ßalarƒ± belirgin)
    const textureLoader = new THREE.TextureLoader();
