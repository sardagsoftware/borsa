        // Convert to lat/lon
        const { lat, lon } = vector3ToLatLon(intersectionPoint, earth.rotation.y);

        // Find nearest country
        const country = findNearestCountry(lat, lon);

        if (country) {
          const countryInfo = `üåç ${country.name}`;
          const regionInfo = `${country.region} ‚Ä¢ ${lat.toFixed(2)}¬∞, ${lon.toFixed(2)}¬∞`;
