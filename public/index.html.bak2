    // ========== Convert 3D Position to Lat/Lon ==========
    function vector3ToLatLon(position, earthRotationY) {
      // Normalize position
      const normalized = position.clone().normalize();

      // Calculate latitude
      const lat = 90 - (Math.acos(normalized.y) * 180 / Math.PI);

      // Calculate longitude (accounting for Earth's rotation)
      let lon = ((Math.atan2(normalized.z, -normalized.x) * 180 / Math.PI) - (earthRotationY * 180 / Math.PI)) % 360;
      if (lon > 180) lon -= 360;
      if (lon < -180) lon += 360;

      return { lat, lon };
    }

    // ========== Find Nearest Country ==========
    function findNearestCountry(lat, lon) {
      let nearest = null;
      let minDistance = Infinity;

      countries.forEach(country => {
        // Calculate great circle distance
        const dLat = (country.lat - lat) * Math.PI / 180;
        const dLon = (country.lon - lon) * Math.PI / 180;
        const a = Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                  Math.cos(lat * Math.PI / 180) * Math.cos(country.lat * Math.PI / 180) *
                  Math.sin(dLon / 2) * Math.sin(dLon / 2);
        const distance = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));

        if (distance < minDistance) {
          minDistance = distance;
          nearest = country;
        }
      });

      return nearest;
    }

