  <script>
    (async function initHealthMonitoring() {
      const badge = document.getElementById('health-status-badge');
      const countEl = document.getElementById('health-count');
      const dot = badge?.querySelector('.health-dot');

      if (!badge || !countEl || !dot) return;

      // Make badge clickable to navigate to status page
      badge.addEventListener('click', () => {
        window.location.href = '/status.html';
      });

      // Fetch health status from API
      async function updateHealthStatus() {
        try {
          const response = await fetch('/api/health', {
            method: 'GET',
            headers: { 'Accept': 'application/json' }
          });

          if (response.ok) {
            const data = await response.json();
            const { healthy = 16, total = 16 } = data;

            countEl.textContent = healthy;

            // Update badge style based on health
            badge.classList.remove('warning', 'error');
            if (healthy === total) {
              // All healthy - green
              dot.style.background = 'var(--accent-1)';
              dot.style.boxShadow = '0 0 8px var(--accent-1)';
            } else if (healthy >= total * 0.8) {
              // 80%+ healthy - warning
              badge.classList.add('warning');
            } else {
              // Less than 80% - error
              badge.classList.add('error');
            }
          } else {
            // API error - show warning
            console.warn('Health API returned:', response.status);
          }
        } catch (err) {
          // Network error - keep default state
          console.warn('Health monitoring error:', err.message);
        }
      }

      // Initial update
      await updateHealthStatus();

      // Update every 30 seconds
      setInterval(updateHealthStatus, 30000);

      console.log('üè• Health monitoring initialized - updating every 30s');
    })();

