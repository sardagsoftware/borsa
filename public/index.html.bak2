  <script>
    (function initUltraModernSearch() {
      const searchInput = document.getElementById('live-search-input');
      const searchResults = document.getElementById('search-results');
      const searchContainer = document.getElementById('search-container');
      const searchLoading = document.getElementById('search-loading');

      if (!searchInput || !searchResults || !searchContainer) return;

      let selectedIndex = -1;
      let currentResults = [];
      const recentSearches = JSON.parse(localStorage.getItem('recentSearches') || '[]');

      // ========== Build Enhanced Search Index ==========
      const searchIndex = [];
      document.querySelectorAll('.mega-item').forEach(item => {
        const titleEl = item.querySelector('.mega-item-title');
        const descEl = item.querySelector('.mega-item-desc');
        const kickerEl = item.closest('.mega-col')?.querySelector('.mega-kicker');

        if (titleEl) {
          searchIndex.push({
            title: titleEl.textContent.trim(),
            description: descEl ? descEl.textContent.trim() : '',
            category: kickerEl ? kickerEl.textContent.trim() : '',
            href: item.getAttribute('href') || '#',
            icon: 'üî∑'
          });
        }
      });

      // ========== Advanced Fuzzy Search ==========
      function searchItems(query) {
        if (!query || query.trim().length < 1) return [];

        const normalizedQuery = query.toLowerCase().trim();
        const words = normalizedQuery.split(/\s+/);

        return searchIndex
          .map(item => {
            const titleLower = item.title.toLowerCase();
            const descLower = item.description.toLowerCase();
            const categoryLower = item.category.toLowerCase();

            let score = 0;
            let matchedText = '';

            // Exact match
            if (titleLower === normalizedQuery) score += 100;
            // Starts with
            else if (titleLower.startsWith(normalizedQuery)) score += 50;
            // Contains
            else if (titleLower.includes(normalizedQuery)) score += 30;

            // Word matching
            words.forEach(word => {
              if (titleLower.includes(word)) score += 20;
              if (descLower.includes(word)) score += 10;
              if (categoryLower.includes(word)) score += 5;
            });

            // Acronym matching
            const titleWords = item.title.split(/\s+/);
            const acronym = titleWords.map(w => w[0]).join('').toLowerCase();
            if (acronym.startsWith(normalizedQuery)) score += 40;

            return { ...item, score };
          })
          .filter(item => item.score > 0)
          .sort((a, b) => b.score - a.score)
          .slice(0, 10);
      }

      // ========== Highlight Matched Text ==========
      function highlightText(text, query) {
        if (!query) return text;
        const regex = new RegExp(`(${query})`, 'gi');
        return text.replace(regex, '<mark style="background: rgba(110, 132, 255, 0.15); color: #6E84FF; padding: 2px 0; border-radius: 3px; font-weight: 600;">$1</mark>');
      }

      // ========== Group Results by Category ==========
      function groupByCategory(results) {
        const grouped = {};
        results.forEach(item => {
          if (!grouped[item.category]) {
            grouped[item.category] = [];
          }
          grouped[item.category].push(item);
        });
        return grouped;
      }

      // ========== Render Ultra-Modern Results ==========
      function renderResults(results, query = '') {
        currentResults = results;
        selectedIndex = -1;

        if (results.length === 0) {
          searchResults.innerHTML = `
            <div style="padding: 32px 20px; text-align: center;">
              <svg style="width: 48px; height: 48px; color: #D1D5DB; margin-bottom: 12px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
              <div style="color: #6B7280; font-size: 14px; font-weight: 500;">Sonu√ß bulunamadƒ±</div>
              <div style="color: #9CA3AF; font-size: 13px; margin-top: 4px;">Farklƒ± bir arama deneyin</div>
            </div>
          `;
          searchResults.style.display = 'block';
          return;
        }

        const grouped = groupByCategory(results);
        let html = '';

        Object.entries(grouped).forEach(([category, items], groupIndex) => {
          html += `
            <div style="margin-bottom: 16px;">
              <div style="padding: 8px 12px 6px 12px; color: #6B7280; font-size: 11px; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px;">
                ${category}
              </div>
          `;

          items.forEach((item, itemIndex) => {
            const globalIndex = results.indexOf(item);
            const isSelected = selectedIndex === globalIndex;

            html += `
              <a
                href="${item.href}"
                class="search-result-item"
                data-index="${globalIndex}"
                style="
                  display: flex;
                  align-items: center;
                  gap: 12px;
                  padding: 12px 14px;
                  border-radius: 12px;
                  cursor: pointer;
                  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
                  text-decoration: none;
                  color: #1A1A1A;
                  background: ${isSelected ? 'rgba(110, 132, 255, 0.08)' : 'transparent'};
                  border: 1px solid ${isSelected ? 'rgba(110, 132, 255, 0.2)' : 'transparent'};
                  margin: 0 4px;
                "
                onmouseover="this.style.background='rgba(110, 132, 255, 0.08)'; this.style.borderColor='rgba(110, 132, 255, 0.2)';"
                onmouseout="this.style.background='transparent'; this.style.borderColor='transparent';"
              >
                <div style="font-size: 20px; flex-shrink: 0;">${item.icon}</div>
                <div style="flex: 1; min-width: 0;">
                  <div style="font-weight: 600; font-size: 14px; color: #1A1A1A; margin-bottom: 2px;">
                    ${highlightText(item.title, query)}
                  </div>
                  ${item.description ? `
                    <div style="font-size: 13px; color: #6B7280; line-height: 1.4; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                      ${item.description}
                    </div>
                  ` : ''}
                </div>
                <div style="flex-shrink: 0;">
                  <svg style="width: 16px; height: 16px; color: #9CA3AF;" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="m9 18 6-6-6-6"></path>
                  </svg>
                </div>
              </a>
            `;
          });

          html += '</div>';
        });

        searchResults.innerHTML = html;
        searchResults.style.display = 'block';
      }

      // ========== Handle Search with Loading ==========
      let searchTimeout;
      const handleSearch = (e) => {
        const query = e.target.value;

        clearTimeout(searchTimeout);

        if (!query || query.trim().length < 1) {
          searchResults.style.display = 'none';
          searchLoading.style.display = 'none';
          return;
        }

        searchLoading.style.display = 'block';

        searchTimeout = setTimeout(() => {
          const results = searchItems(query);
          searchLoading.style.display = 'none';
          renderResults(results, query);
        }, 100);
      };

      searchInput.addEventListener('input', handleSearch);

      // ========== Enhanced Keyboard Navigation ==========
      window.addEventListener('keydown', (e) => {
        // Command+K or Ctrl+K
        if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
          e.preventDefault();
          searchInput.focus();
          searchInput.select();
        }

        // Escape to close
        if (e.key === 'Escape') {
          searchResults.style.display = 'none';
          searchInput.blur();
          selectedIndex = -1;
        }

        // Arrow navigation when results are visible
        if (searchResults.style.display === 'block' && currentResults.length > 0) {
          if (e.key === 'ArrowDown') {
            e.preventDefault();
            selectedIndex = (selectedIndex + 1) % currentResults.length;
            renderResults(currentResults, searchInput.value);
          }

          if (e.key === 'ArrowUp') {
            e.preventDefault();
            selectedIndex = selectedIndex <= 0 ? currentResults.length - 1 : selectedIndex - 1;
            renderResults(currentResults, searchInput.value);
          }

          // Enter to navigate
          if (e.key === 'Enter' && selectedIndex >= 0) {
            e.preventDefault();
            const selectedItem = currentResults[selectedIndex];
            if (selectedItem) {
              // Save to recent searches
              const searches = JSON.parse(localStorage.getItem('recentSearches') || '[]');
              searches.unshift(searchInput.value);
              localStorage.setItem('recentSearches', JSON.stringify(searches.slice(0, 5)));
              window.location.href = selectedItem.href;
            }
          }
        }
      });

      // ========== Focus Handler ==========
      searchInput.addEventListener('focus', () => {
        if (searchInput.value.trim().length >= 1) {
          const results = searchItems(searchInput.value);
          renderResults(results, searchInput.value);
        }
      });

      // ========== Click Outside ==========
      document.addEventListener('click', (e) => {
        if (!searchContainer.contains(e.target)) {
          searchResults.style.display = 'none';
          selectedIndex = -1;
        }
      });

      // Prevent blur when clicking inside dropdown
      searchResults.addEventListener('mousedown', (e) => e.preventDefault());

      console.log('üîç Ultra-modern search initialized - Press ‚åòK or Ctrl+K');
    })();
  </script>

