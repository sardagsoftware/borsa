    setInterval(fetchRealAIData, 10000);

    // ========== Create AI Data Flow Lines ==========
    const dataFlows = [];
    const flowCount = 100; // Number of active data flows (increased for Kaspersky effect)

    function createDataFlow() {
      const fromHub = aiHubs[Math.floor(Math.random() * aiHubs.length)];
      const toHub = aiHubs[Math.floor(Math.random() * aiHubs.length)];

      if (fromHub === toHub) return;

      const fromPos = latLonToVector3(fromHub.lat, fromHub.lon, earthRadius + 0.15);
      const toPos = latLonToVector3(toHub.lat, toHub.lon, earthRadius + 0.15);

