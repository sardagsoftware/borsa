    /* ============================================================ */
    /* üé® GLASSMORPHISM HEADER (AWARD-LEVEL)                       */
    /* ============================================================ */

    .header-2025 {
      position: sticky;
      top: 0;
      z-index: 50;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background: rgba(0, 0, 0, 0.6);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.9);
      transition: transform .35s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .header-2025[data-hide="true"] {
      transform: translateY(-100%);
    }

    .header-container {
      max-width: 100%;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 68px;
      gap: 1rem;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
      font-weight: 900;
      font-size: 30px;
      color: #FFFFFF;
      letter-spacing: 0.05em;
      transition: opacity 0.2s ease;
      flex-shrink: 0;
    }

    .brand:hover {
      opacity: 0.8;
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      list-style: none;
      flex-shrink: 0;
    }

    .nav-link {
      color: #FFFFFF;
      font-weight: 700;
      padding: 0.6rem 0.75rem;
      border-radius: 10px;
      border: 1px solid transparent;
      cursor: pointer;
      background: transparent;
      font-size: 16px;
      letter-spacing: -0.01em;
      transition: all 0.2s ease;
      text-decoration: none;
      display: inline-block;
      white-space: nowrap;
    }

    .nav-link:hover,
    .nav-link:focus-visible {
      color: #FFFFFF;
      border-color: rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.1);
      outline: none;
    }

    .nav-link[aria-expanded="true"] {
      color: #FFFFFF;
      background: rgba(255, 255, 255, 0.1);
    }

    .cta {
      background: linear-gradient(135deg, #FFFFFF, #F0F0F0);
      color: #000000;
      font-weight: 800;
      padding: 0.65rem 1.1rem;
      border-radius: 11px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      cursor: pointer;
      font-size: 13.5px;
      box-shadow: 0 8px 40px rgba(255, 255, 255, 0.2), 0 4px 20px rgba(255, 255, 255, 0.15);
      transition: all 0.2s ease;
      text-decoration: none;
      display: inline-block;
      white-space: nowrap;
    }

    .cta:hover {
      transform: translateY(-1px);
      box-shadow: 0 12px 50px rgba(255, 255, 255, 0.4), 0 6px 30px rgba(255, 255, 255, 0.3);
      background: linear-gradient(135deg, #FFFFFF, #FFFFFF);
      color: #000000;
    }

    .cta-os {
      background: linear-gradient(135deg, #FFFFFF, #F0F0F0);
      padding: 0.65rem 1.1rem;
      margin-right: 0.5rem;
      color: #000000;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .cta-os:hover {
      background: linear-gradient(135deg, #FFFFFF, #FFFFFF);
      color: #000000;
    }

    .nav-right {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-shrink: 0;
    }

    /* Search Input Placeholder Styling */
    #live-search-input::placeholder {
      color: rgba(255, 255, 255, 0.6);
      opacity: 1;
    }

    #live-search-input::-webkit-input-placeholder {
      color: rgba(255, 255, 255, 0.6);
    }

    #live-search-input::-moz-placeholder {
      color: rgba(255, 255, 255, 0.6);
    }

    .health-badge {
      transition: all 0.3s ease;
      white-space: nowrap;
    }

    /* ============================================================ */
    /* üéØ MEGA DROPDOWN MENUS (AWARD-LEVEL)                        */
    /* ============================================================ */

    .mega {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      width: min(1100px, 92vw);
      margin-top: 0.75rem;
      padding: 14px;
      border-radius: 18px;
      background: rgba(0, 0, 0, 0.7);
      border: 1px solid rgba(255, 255, 255, 0.15);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.25s ease, visibility 0.25s ease;
    }

    .mega.active {
      opacity: 1;
      visibility: visible;
    }

    .mega-grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 14px;
    }

    .mega-col {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 14px;
      padding: 14px;
    }

    .mega-kicker {
      font-size: 11px;
      color: rgba(255, 255, 255, 0.7);
      letter-spacing: 0.5px;
      text-transform: uppercase;
      margin-bottom: 8px;
      font-weight: 800;
    }

    .mega-item {
      display: flex;
      gap: 12px;
      padding: 10px;
      border-radius: 12px;
      color: rgba(255, 255, 255, 0.8);
      border: 1px solid transparent;
      cursor: pointer;
      transition: all 0.2s ease;
      text-decoration: none;
    }

    .mega-item:hover {
      color: #FFFFFF;
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
    }

    .mega-item-icon {
      flex-shrink: 0;
      width: 18px;
      height: 18px;
    }

    .mega-item-content {
      flex: 1;
    }

    .mega-item-title {
      font-weight: 700;
      font-size: 14px;
      letter-spacing: -0.01em;
    }

    .mega-item-desc {
