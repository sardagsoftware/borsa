    }

    // √úlke bazƒ±nda amber glow g√ºncelle (√ßok minimal deƒüi≈üim)
    function updateCountryGlows() {
      countryGlows.forEach(({ glow, country }) => {
        const data = realTimeData[country.name];
        if (data) {
          glow.material.opacity = 0.08 + (data.intensity * 0.07); // √áok minimal parlaklƒ±k (0.08-0.15)
