    <script>
        const API_BASE = 'http://localhost:3100';

        async function runVQE() {
            const resultDiv = document.getElementById('vqe-result');
            const btn = event.target;

            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span> Kuantum hesaplama yapılıyor...';

            const payload = {
                molecule: document.getElementById('vqe-molecule').value,
                bondDistance: parseFloat(document.getElementById('vqe-distance').value),
                device: document.getElementById('vqe-device').value,
                budget: 0.10
            };

            try {
                const startTime = performance.now();
                const response = await fetch(`${API_BASE}/api/quantum/vqe`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                const duration = (performance.now() - startTime).toFixed(0);

                if (data.success) {
                    const energy = data.data.energy;
                    resultDiv.className = 'result success';
                    resultDiv.innerHTML = `<strong>SUCCESS — VQE SIMULATION COMPLETE</strong>

Molekül: ${data.data.molecule}
Cihaz: ${data.data.device.toUpperCase()}
Maliyet: $${data.data.cost}

═══════════════════════════════════
GROUND STATE ENERJİSİ
═══════════════════════════════════
Hartree: ${energy.hartree.toFixed(6)}
Pharma:  ${energy.kcalMol.toFixed(2)} kcal/mol

═══════════════════════════════════
PERFORMANS METRİKLERİ
═══════════════════════════════════
Quantum: ${data.data.executionTime}
API:     ${duration}ms
Cache:   ${data.data.fromCache ? 'HIT' : 'MISS'}
                    `;

                    if (energy) {
                        const energyDiv = document.createElement('div');
                        energyDiv.className = 'energy-display';
                        energyDiv.innerHTML = `
                            <div class="label">Ground State Energy</div>
                            <div class="value">${energy.kcalMol.toFixed(2)}</div>
                            <div class="unit">kcal/mol (pharma standard)</div>
                        `;
                        resultDiv.appendChild(energyDiv);
                    }
                } else {
                    resultDiv.className = 'result error';
                    resultDiv.textContent = `ERROR\n\n${data.error}\n${data.message || ''}`;
                }
            } catch (error) {
                resultDiv.className = 'result error';
                resultDiv.textContent = `CONNECTION ERROR\n\n${error.message}\n\nServer çalışıyor mu kontrol edin:\nPORT=3100 node server.js`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = `<svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg> VQE Çalıştır`;
            }
        }

        async function runMedicalAnalysis() {
            const resultDiv = document.getElementById('med-result');
            const btn = event.target;

            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span> Quantum + AI analizi...';

            const payload = {
                molecule: document.getElementById('med-molecule').value,
                device: 'cpu',
                budget: 0.10,
                language: document.getElementById('med-language').value
            };

            try {
                const startTime = performance.now();
                const response = await fetch(`${API_BASE}/api/medical/quantum-analysis`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const data = await response.json();
                const duration = (performance.now() - startTime).toFixed(0);

                if (data.success) {
                    const quantum = data.data.quantumSimulation;
                    const medical = data.data.medicalAnalysis;
                    const perf = data.data.performance;

                    resultDiv.className = 'result success';
                    resultDiv.innerHTML = `<strong>SUCCESS — MEDICAL QUANTUM ANALYSIS COMPLETE</strong>

Molekül: ${data.data.molecule}
Enerji:  ${quantum.energy?.kcalMol?.toFixed(2) || 'N/A'} kcal/mol
Cihaz:   ${quantum.device.toUpperCase()}
Maliyet: ${quantum.cost}

═══════════════════════════════════
PERFORMANS METRİKLERİ
═══════════════════════════════════
Quantum:  ${quantum.executionTime}
AI:       ${perf.aiTime}
Toplam:   ${perf.totalTime}
API:      ${duration}ms

AI Model: ${medical.model}

═══════════════════════════════════
MEDICAL ANALYSIS
═══════════════════════════════════

${medical.content}
                    `;
                } else {
                    resultDiv.className = 'result error';
                    resultDiv.textContent = `ERROR\n\n${data.error}\n${data.message || ''}`;
                }
            } catch (error) {
                resultDiv.className = 'result error';
                resultDiv.textContent = `CONNECTION ERROR\n\n${error.message}`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = `<svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 2L15 2M12 2V8M9 8C8 9 6 11 6 13C6 15 7 17 9 18C11 19 13 19 15 18C17 17 18 15 18 13C18 11 16 9 15 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <circle cx="9" cy="13" r="1" fill="currentColor"/>
                    <circle cx="15" cy="13" r="1" fill="currentColor"/>
                    <path d="M12 18V22" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg> Quantum + AI Analiz`;
            }
        }

        async function loadStats() {
            const resultDiv = document.getElementById('stats-result');
            const btn = event.target;

            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span> Yükleniyor...';

            try {
                const response = await fetch(`${API_BASE}/api/quantum/stats`);
                const data = await response.json();

                if (data.success) {
                    const stats = data.data;

                    resultDiv.innerHTML = `
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="value">${stats.performance.totalJobs}</div>
                                <div class="label">Toplam İşlem</div>
                            </div>
                            <div class="stat-card">
                                <div class="value">${stats.performance.successRate}</div>
                                <div class="label">Başarı Oranı</div>
                            </div>
                            <div class="stat-card">
                                <div class="value">${stats.cache.hitRate}</div>
                                <div class="label">Cache Hit Rate</div>
                            </div>
                            <div class="stat-card">
                                <div class="value">${stats.cost.total}</div>
                                <div class="label">Toplam Maliyet</div>
                            </div>
                        </div>
                    `;

                    if (Object.keys(stats.devices).length > 0) {
                        const deviceList = Object.entries(stats.devices)
                            .map(([device, count]) => `<li>${device.toUpperCase()}: <strong>${count}</strong></li>`)
                            .join('');

                        const breakdown = document.createElement('div');
                        breakdown.style.marginTop = '20px';
                        breakdown.innerHTML = `
                            <h3 style="color: var(--txt-2); font-size: 14px; margin-bottom: 12px; text-transform: uppercase; letter-spacing: 0.5px;">Cihaz Kullanımı</h3>
                            <ul class="info-list">${deviceList}</ul>
                        `;
                        resultDiv.appendChild(breakdown);
                    }
                } else {
                    resultDiv.className = 'result error';
                    resultDiv.textContent = `ERROR\n\n${data.error}`;
                }
            } catch (error) {
                resultDiv.className = 'result error';
                resultDiv.textContent = `CONNECTION ERROR\n\n${error.message}`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = `<svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21.5 2v6h-6M2.5 22v-6h6M2 11.5a10 10 0 0 1 18.8-4.3M22 12.5a10 10 0 0 1-18.8 4.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg> İstatistikleri Yükle`;
            }
        }

        console.log('Quantum Test Platform Loaded — LyDian OS');
        console.log('API Base:', API_BASE);
    </script>
</body>
